<Window x:Class="Capstone.ListSubscribers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Customers"
        WindowState="Maximized"
        Background="White" Height="736" Width="868">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40">

            <!-- 🔹 Header Section -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Home -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0"
                            Cursor="Hand" Margin="0,0,15,0">
                    <Image Source="/Icon/arrow-left.png" Width="30" Height="30"/>
                    <Label Content="Back" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Spacer -->
                <StackPanel Grid.Column="1"/>

                <!-- Notification -->
                <Image Source="/Icon/bell.png" Width="30" Height="30" Grid.Column="2" Margin="0,0,15,0" VerticalAlignment="Center"/>

                <!-- Settings -->
                <Image Source="/Icon/gear.png" Width="30" Height="30" Grid.Column="3" VerticalAlignment="Center"/>
            </Grid>

            <!-- 🔹 Page Title -->
            <Label Content="List of Subscribers" FontSize="15" FontWeight="Bold" Margin="0,10,0,0"/>

            <!-- 🔹 Customers Quick Message Table -->
            <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="0,0,0,20" Height="468">
                <StackPanel>
                    <TextBlock Text="Molave Street Barbers Subscribers"
                               FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <DataGrid x:Name="SubscribersGrid" AutoGenerateColumns="False"
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              RowHeight="35" FontSize="14"
                              BorderBrush="#DDD" BorderThickness="1"
                              GridLinesVisibility="All">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="3*"/>
                            <DataGridTextColumn Header="Contact Number" Binding="{Binding ContactNumber}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel x:Name="PaginationPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"/>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>
