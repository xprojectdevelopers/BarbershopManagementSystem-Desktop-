                            <Label Content="Rebond/Short Hair" FontSize="20" HorizontalAlignment="Left" Margin="68,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <TextBox HorizontalAlignment="Left" FontSize="30" Margin="-176,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
