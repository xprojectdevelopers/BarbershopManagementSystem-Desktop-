Width="205"
Height="40"
Margin="835,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Blue" 
            CornerRadius="20" 
            BorderBrush="Blue" 
