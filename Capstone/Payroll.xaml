<Window x:Class="Capstone.Payroll"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="Payroll" Height="2000" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="White">

    <Window.Resources>
        <Style x:Key="TextBoxStyleDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TextBox part -->
                                    <DatePickerTextBox Grid.Column="0" 
                                                       x:Name="PART_TextBox"
                                                       Margin="{TemplateBinding Padding}"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       FontSize="{TemplateBinding FontSize}"
                                                       VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="0"
                                               x:Name="PlaceholderText"
                                               Text="{TemplateBinding Tag}"
                                               Foreground="Gray"
                                               FontSize="{TemplateBinding FontSize}"
                                               Margin="{TemplateBinding Padding}"
                                               VerticalAlignment="Center"
                                               IsHitTestVisible="False"/>

                                    <!-- Calendar button -->
                                    <Button Grid.Column="1" 
                                            x:Name="PART_Button"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="20"
                                            Height="20"
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center">
                                        <!-- Calendar icon -->
                                        <Path Fill="Gray" 
                                              Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                                              Stretch="Uniform"
                                              Width="12"
                                              Height="12"/>
                                    </Button>

                                    <!-- Popup for calendar -->
                                    <Popup Grid.Column="0" Grid.ColumnSpan="2"
                                           x:Name="PART_Popup"
                                           PlacementTarget="{Binding ElementName=Border}"
                                           Placement="Bottom"
                                           StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show placeholder -->
                            <Trigger Property="SelectedDate" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <!-- Hide placeholder-->
                            <DataTrigger Binding="{Binding SelectedDate, RelativeSource={RelativeSource Self}}">
                                <DataTrigger.Value>
                                    <x:Null/>
                                </DataTrigger.Value>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Scroll container -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              PanningMode="VerticalOnly">

            <StackPanel Margin="40" Width="1205">

                <!-- Header Section -->
                <Grid Margin="20,0,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Home - on the left side -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
                MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="0,0,15,0">
                        <Image Source="/Icon/house.png" Width="30" Height="30"/>
                        <Label Content="Home" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Empty space in middle -->
                    <StackPanel Grid.Column="1"/>

                    <!-- Notification -->
                    <Image Source="/Icon/bell.png" Width="30" Height="30" Grid.Column="2" Margin="0,0,15,0" VerticalAlignment="Center"/>

                    <!-- Settings -->
                    <Image Source="/Icon/gear.png" Width="30" Height="30" Grid.Column="3" VerticalAlignment="Center"/>
                </Grid>

                <!-- Page Title -->
                <Label Content="Payroll" FontSize="20" FontWeight="Bold" Margin="20,0,20,15"/>
