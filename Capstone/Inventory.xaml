<Window x:Class="Capstone.Inventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        xmlns:custom="clr-namespace:Capstone.CustomControls"
        mc:Ignorable="d"
        Title="Inventory" Height="1000" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="White">

    <Window.Resources>
        <!-- Responsive button style for notification and settings -->
        <Style x:Key="ResponsiveButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="{TemplateBinding BorderThickness}"
                         Padding="{TemplateBinding Padding}"
                         CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple icon style for top bar -->
        <Style x:Key="TopBarIcon" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header Section -->
                <RowDefinition Height="Auto"/>
                <!-- UniformGrid Section -->
                <RowDefinition Height="Auto"/>
                <!-- DataGrid Section -->
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,0" Width="1205">
                <Grid Margin="20,30,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Home -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
                     MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="0,0,15,0">
                        <Image Source="/Icon/house.png" Width="30" Height="30"/>
                        <Label Content="Home" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>


                    <StackPanel Grid.Column="1"/>
                    <!-- Settings Icon -->
                    <Button Grid.Column="3"
                 Style="{StaticResource ResponsiveButton}"
                 ToolTip="Settings" Cursor="Hand"
                 Click="Setting_Click">
                        <Image Source="/Icon/gear.png" Style="{StaticResource TopBarIcon}"/>
                    </Button>
                </Grid>

                <Label Content="Inventory" FontSize="20" FontWeight="Bold" Margin="20,20,20,15"/>
            </StackPanel>

            <!-- UniformGrid Section -->
            <UniformGrid Grid.Row="1" Columns="3" Rows="1" Margin="55,-15,55,20" Height="200">
                <!-- Employees Profile -->
                <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Icon/Sorting-Center--Streamline-Milano.png" Stretch="Uniform" Width="120" Height="100"/>
                        <Button Content="Manage Item"
                            Background="Blue" Foreground="White"
                            FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                            Click="ManageItem_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Payroll History -->
                <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Icon/Dropshipping-1--Streamline-Milano.png" Stretch="Uniform" Width="120" Height="100"/>
                        <Button Content="Purchased Orders"
                            Background="Black" Foreground="White"
                            FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                            Click="Purchased_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Attendance Report -->
                <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Icon/emptystates-empty-cart.png" Stretch="Uniform" Width="120" Height="100"/>
                        <Button Content="Sales Orders"
                            Background="Black" Foreground="White"
                            FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                            Click="Sales_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- DataGrid Section -->
            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="55,-10,55,40">
                <StackPanel>
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="Inventory Transaction History"
                                   FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <Button Content="Refresh"
                                Background="Black" Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand" Height="38" Width="140"
                                Click="Refresh_Click"
                                HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>


                    <DataGrid x:Name="EmployeeGrid" AutoGenerateColumns="False"
CanUserAddRows="False" CanUserDeleteRows="False"
HeadersVisibility="Column"
RowHeight="35" FontSize="14"
BorderBrush="#DDD" BorderThickness="1"
GridLinesVisibility="All">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                            <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                            <DataGridTextColumn Header="Transaction Type" Binding="{Binding Transaction}" Width="*"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding QuantityWithSign}" Width="*"/>
                            <DataGridTextColumn Header="Processed By" Binding="{Binding ProcessedBy, TargetNullValue=''}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- PAGINATION SECTION -->
                    <Border Background="white" CornerRadius="5" Padding="10" Margin="0,15,0,0">
                        <StackPanel x:Name="PaginationPanel"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Gray Overlay for Modal Effect -->
            <Border x:Name="ModalOverlay"
                Grid.RowSpan="10"
                Background="#80000000"
                Visibility="Collapsed"
                IsHitTestVisible="True"
                MouseLeftButtonDown="ModalOverlay_Click"/>
        </Grid>
    </ScrollViewer>
</Window>