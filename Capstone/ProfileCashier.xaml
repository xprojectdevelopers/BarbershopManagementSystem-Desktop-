<Window x:Class="Capstone.ProfileCashier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="My Profile - Cashier" Height="700" Width="1200"
        WindowState="Maximized"
        MinWidth="400"
        MinHeight="400"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="ResponsiveProfileName" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ResponsiveProfileRole" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ResponsiveButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="TopBarIcon" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Profile Section -->
        <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top">
            <Viewbox Stretch="Uniform" MaxWidth="350" MaxHeight="300" StretchDirection="DownOnly">
                <StackPanel Orientation="Vertical">
                    <!-- Profile Image Container -->
                    <Border x:Name="ProfileImageBorder" Width="120" Height="120" 
                           CornerRadius="60"
                           Background="LightGray" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"
                           ClipToBounds="True">
                        <Image Source="/Icon/profile.png" 
                               Stretch="UniformToFill"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Profile Info -->
                    <StackPanel>
                        <TextBlock Text="Cashier Name" x:Name="NameText"
                                  Style="{StaticResource ResponsiveProfileName}"/>
                        <TextBlock Text="Cashier" x:Name="RoleText"
                                  Style="{StaticResource ResponsiveProfileRole}"/>
                    </StackPanel>
                </StackPanel>
            </Viewbox>
        </Grid>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Height="60" VerticalAlignment="Top">
            <Grid Margin="12,224,-12,-224">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,20,0">
                    <Button Click="BackButton_Click" Cursor="Hand" Style="{StaticResource ResponsiveButton}">
                        <Image Source="/Icon/house.png" Style="{StaticResource TopBarIcon}"/>
                    </Button>


                    <Button Style="{StaticResource ResponsiveButton}" Cursor="Hand" ToolTip="Settings" Click="Setting_Click">
                        <Image Source="/Icon/gear.png" Style="{StaticResource TopBarIcon}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Form Fields (Read-Only for Cashier) -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0" Width="450">
            <!-- Name Field (Read-Only) -->
            <Grid Margin="0,100,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Name" FontSize="20" Grid.Row="0" Margin="100,4,0,1"/>
                <TextBox x:Name="txtName" VerticalContentAlignment="Center" FontSize="20" 
                         Grid.Row="1" Height="47" Width="250" IsReadOnly="True"
                         Cursor="Arrow"/>
            </Grid>

            <!-- Employee ID Field (Read-Only) -->
            <Grid Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Employee ID" FontSize="20" Grid.Row="0" Margin="100,4,0,1"/>
                <TextBox x:Name="txtEmployeeID" VerticalContentAlignment="Center" FontSize="20" 
                         Grid.Row="1" Height="47" Width="250" IsReadOnly="True"
                         Cursor="Arrow"/>
            </Grid>

            <!-- Role Field (Read-Only) -->
            <Grid Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Role" FontSize="20" Grid.Row="0" Margin="100,4,0,1"/>
                <TextBox x:Name="txtRole" VerticalContentAlignment="Center" FontSize="20" 
                         Grid.Row="1" Height="47" Width="250" IsReadOnly="True"
                         Cursor="Arrow"/>
            </Grid>
        </StackPanel>

        <!-- Gray Overlay for Modal Effect - MOVED OUTSIDE ScrollViewer -->
        <Border x:Name="ModalOverlay"
            Background="#80000000"
            Visibility="Collapsed"
            IsHitTestVisible="True"
            MouseLeftButtonDown="ModalOverlay_Click"/>
    </Grid>
</Window>