<Window x:Class="Capstone.ProfileAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="My Profile - Admin" Height="700" Width="1200"
        WindowState="Maximized"
        MinWidth="400"
        MinHeight="400"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="ResponsiveProfileName" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ResponsiveProfileRole" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ResponsiveButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopBarIcon" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Profile Section -->
        <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top">
            <Viewbox Stretch="Uniform" MaxWidth="350" MaxHeight="300" StretchDirection="DownOnly">
                <StackPanel Orientation="Vertical">
                    <!-- Profile Image Container with Camera Icon -->
                    <Grid Width="120" Height="120" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <!-- Profile Image Border -->
                        <Border x:Name="ProfileImageBorder" Width="120" Height="120" 
                               CornerRadius="60"
                               Background="LightGray" 
                               ClipToBounds="True">
                            <Image Source="/Icon/profile.png" 
                                   Stretch="UniformToFill"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Camera Icon Button -->
                        <Button x:Name="btnChangePhoto" 
                                Click="ChangePhoto_Click"
                                Width="36" Height="36"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Background="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip="Change Profile Photo">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <!-- White Circle Background -->
                                        <Ellipse Width="36" Height="36" Fill="White">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="Black" 
                                                                  BlurRadius="8" 
                                                                  ShadowDepth="2" 
                                                                  Opacity="0.3"/>
                                            </Ellipse.Effect>
                                        </Ellipse>

                                        <!-- Camera Icon -->
                                        <Viewbox Width="20" Height="20">
                                            <Canvas Width="24" Height="24">
                                                <!-- Camera Body -->
                                                <Path Fill="#333333" 
                                                      Data="M9,2L7.17,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6A2,2 0 0,0 20,4H16.83L15,2H9M12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9Z"/>
                                            </Canvas>
                                        </Viewbox>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- Profile Info -->
                    <StackPanel>
                        <TextBlock Text="Admin Name" x:Name="NameText"
                                  Style="{StaticResource ResponsiveProfileName}"/>
                        <TextBlock Text="Admin" x:Name="RoleText"
                                  Style="{StaticResource ResponsiveProfileRole}"/>
                    </StackPanel>
                </StackPanel>
            </Viewbox>
        </Grid>

        <!-- Top Navigation Bar (Centered under Admin) -->
        <Border Grid.Row="0" Height="60" VerticalAlignment="Top" Margin="0,220,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Click="BackButton_Click" Cursor="Hand" Style="{StaticResource ResponsiveButton}">
                        <Image Source="/Icon/house.png" Style="{StaticResource TopBarIcon}"/>
                    </Button>

                    <Button Style="{StaticResource ResponsiveButton}" Cursor="Hand" ToolTip="Settings" Click="Setting_Click">
                        <Image Source="/Icon/gear.png" Style="{StaticResource TopBarIcon}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Form Fields (Lowered slightly) -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,160,0,0" Width="450">
            <!-- Name Field -->
            <Grid Margin="0,100,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Name" FontSize="20" Grid.Row="0" Margin="100,4,0,1"/>
                <TextBox x:Name="txtName" VerticalContentAlignment="Center" FontSize="20" 
                         Grid.Row="1" Height="47" Width="250"
                         Cursor="Arrow"/>
            </Grid>

            <!-- Username Field -->
            <Grid Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Username" FontSize="20" Grid.Row="0" Margin="100,-10,0,1"/>
                <TextBox x:Name="txtUsername" VerticalContentAlignment="Center" FontSize="20" 
                         Grid.Row="1" Height="47" Width="250"
                         Cursor="Arrow"/>
            </Grid>

            <!-- Password Field -->
            <Grid Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Password Field with Toggle -->
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Password" FontSize="20" Grid.Row="0" Margin="100,-30,-100,1"/>

                    <!-- Container for password fields and toggle button -->
                    <Grid Grid.Row="1" Width="250">
                        <PasswordBox x:Name="txtPassword" FontSize="20" VerticalContentAlignment="Center"
                      Height="47" Padding="5,0,40,0"/>

                        <TextBox x:Name="txtPasswordVisible" FontSize="20" VerticalContentAlignment="Center"
                  Height="47" Padding="5,0,40,0" Visibility="Collapsed"/>

                        <!-- Toggle Button -->
                        <Button x:Name="btnTogglePassword" 
                 Click="TogglePasswordVisibility_Click"
                 Width="30" Height="30"
                 HorizontalAlignment="Right"
                 Margin="0,0,10,0"
                 Background="Transparent"
                 BorderThickness="0"
                 Cursor="Hand"
                 ToolTip="Show/Hide Password">
                            <TextBlock x:Name="txtToggleIcon" Text="👁" FontSize="16" FontFamily="Segoe UI Emoji"/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Update Button -->
            <Button Content="Update" Cursor="Hand" Click="UpdateButton_Click"
            Width="205" Height="40" Margin="0,10,0,0"
            Foreground="white">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="blue" CornerRadius="20" BorderBrush="blue" BorderThickness="1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Content}"
                      Foreground="{TemplateBinding Foreground}"
                      VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        
        <!-- Gray Overlay for Modal Effect - MOVED OUTSIDE ScrollViewer -->
        <Border x:Name="ModalOverlay"
            Background="#80000000"
            Visibility="Collapsed"
            IsHitTestVisible="True"
            MouseLeftButtonDown="ModalOverlay_Click"/>
    </Grid>
</Window>