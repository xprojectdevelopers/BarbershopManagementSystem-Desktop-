<Window x:Class="Capstone.EmployeeProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="Testing" 
        Width="1424" 
        WindowState="Maximized"
        ResizeMode="CanResize" Height="2280">

    <Window.Resources>
        <!-- Custom DatePicker Style -->
        <Style x:Key="TextBoxStyleDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Name="Border"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TextBox part -->
                                    <DatePickerTextBox Grid.Column="0" 
                               x:Name="PART_TextBox"
                               Margin="{TemplateBinding Padding}"
                               Background="Transparent"
                               BorderThickness="0"
                               FontSize="{TemplateBinding FontSize}"
                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="0"
                       x:Name="PlaceholderText"
                       Text="{TemplateBinding Tag}"
                       Foreground="Gray"
                       FontSize="{TemplateBinding FontSize}"
                       Margin="{TemplateBinding Padding}"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="Collapsed"/>

                                    <!-- Calendar button -->
                                    <Button Grid.Column="1" 
                    x:Name="PART_Button"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="20"
                    Height="20"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center">
                                        <!-- Calendar icon -->
                                        <Path Fill="Gray" 
                      Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                      Stretch="Uniform"
                      Width="12"
                      Height="12"/>
                                    </Button>

                                    <!-- Popup for calendar -->
                                    <Popup Grid.Column="0" Grid.ColumnSpan="2"
                   x:Name="PART_Popup"
                   PlacementTarget="{Binding ElementName=Border}"
                   Placement="Bottom"
                   StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show placeholder when no date selected -->
                            <Trigger Property="SelectedDate" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="TextBoxStyleComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content Presenter -->
                                    <ContentPresenter Grid.Column="0"
                                                      x:Name="PART_ContentPresenter"
                                                      Margin="{TemplateBinding Padding}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      HorizontalAlignment="Left"
                                                      IsHitTestVisible="False"/>

                                    
                                    <ToggleButton Grid.Column="1"
                                                  x:Name="PART_DropDownToggle"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Width="20"
                                                  Height="20"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <Path Fill="Gray"
                                              Data="M7,10L12,15L17,10H7Z"
                                              Stretch="Uniform"
                                              Width="10"
                                              Height="8"/>
                                    </ToggleButton>

                                    <!-- Popup -->
                                    <Popup x:Name="PART_Popup"
                                           Grid.ColumnSpan="2"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           Placement="Bottom"
                                           PlacementTarget="{Binding ElementName=Border}"
                                           StaysOpen="False">
                                        <Border Background="White"
                                                BorderBrush="Gray"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                MinWidth="{Binding ActualWidth, ElementName=Border}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                            <!-- Focus effect -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Height="2150">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="45,40,95,20" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
                MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="47,0,0,0">
                    <Image Source="/Icon/arrow-left.png" Width="30" Height="30"/>
                    <Label Content="Back" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Notification -->
                <Image Source="/Icon/bell.png" Width="30" Height="30" Grid.Column="1" Margin="0,0,5,0" VerticalAlignment="Center"/>
                <!-- Settings -->
                <Image Source="/Icon/gear.png" Width="30" Height="30" Grid.Column="2" VerticalAlignment="Center"/>
            </Grid>


            <!-- PAGE TITLE -->
            <TextBlock Text="New Employee" 
           FontSize="20" 
           FontWeight="Bold" 
           Margin="100,20,0,481" 
           Grid.Row="1"/>

            <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="105,51,95,685" Grid.Row="1">

            </Border>

            <Label Content="Personal Details" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.096,5.165" Margin="255,290,0,0" Grid.Row="1" FontWeight="Bold"/>

            <!-- Full Name -->
            <Label Content="Full name *" FontSize="20" HorizontalAlignment="Left" Margin="255,370,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox x:Name="txtFullName" HorizontalAlignment="Left" FontSize="30" Margin="255,407,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="465"/>
            <TextBlock x:Name="txtFullNameError" Foreground="Red" FontSize="14" Margin="255,450,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
            <TextBlock x:Name="txtFullNameTaken" Foreground="Red" FontSize="14" Margin="255,450,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
            
            <!-- Profile Image + Upload Button -->
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" Margin="760,301,0,-7">
                <Image x:Name="PhotoPreview" Height="195" Width="195" Source="/Icon/profile.png" 
           Stretch="UniformToFill" Margin="0,0,0,10"/>
                <Button Content="Upload Photo" Cursor="Hand" Background="white" Padding="15,8" Click="UploadPhoto_Click" Width="295" Height="50"/>
                <TextBlock x:Name="txtPhotoError" Foreground="Red" FontSize="14" 
Margin="760,465,0,0" Grid.Row="1" 
HorizontalAlignment="Left" VerticalAlignment="Top" 
Visibility="Collapsed"/>
            </StackPanel>

            <!-- Birthdate -->
            <Label Content="Birthdate *" FontSize="20" HorizontalAlignment="Left" Margin="255,470,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <DatePicker HorizontalAlignment="Left" x:Name="bdate"
                        Margin="255,507,0,0" 
                        Grid.Row="1" 
                        VerticalAlignment="Top" 
                        Width="250"
                        Style="{StaticResource TextBoxStyleDatePicker}"
                        Tag="Select Birth Date" Height="49"/>
            <TextBlock x:Name="txtBdateError" Foreground="Red" FontSize="14" Margin="255,555,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <!-- Gender -->
            <Label Content="Gender *" FontSize="20" HorizontalAlignment="Left" Margin="521,470,0,0" 
       Grid.Row="1" VerticalAlignment="Top"/>

            <ComboBox x:Name="Gender" HorizontalAlignment="Left" Margin="525,507,0,0" Grid.Row="1" VerticalAlignment="Top" 
          Width="190" Height="47" FontSize="16" SelectedIndex="-1"
          Style="{StaticResource TextBoxStyleComboBox}">
                <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Gender</ComboBoxItem>
                <ComboBoxItem>Male</ComboBoxItem>
                <ComboBoxItem>Female</ComboBoxItem>
                <ComboBoxItem>Prefer not to say</ComboBoxItem>
            </ComboBox>
            <TextBlock x:Name="txtGenderError" Foreground="Red" FontSize="14" Margin="525,555,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Label Content="Address *" FontSize="20" HorizontalAlignment="Left" Margin="255,590,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox x:Name="txtAddress" HorizontalAlignment="Left" FontSize="30" Margin="255,627,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="805"/>
            <TextBlock x:Name="txtAddressError" Foreground="Red" FontSize="14" Margin="255,670,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Label Content="Contact Number *" FontSize="20" HorizontalAlignment="Left" Margin="255,697,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox x:Name="txtContactNumber" HorizontalAlignment="Left" FontSize="30" Margin="255,735,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="805"/>
            <TextBlock x:Name="txtContactNumberError" Foreground="Red" FontSize="14" Margin="255,778,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Label Content="Email Address *" FontSize="20" HorizontalAlignment="Left" Margin="255,805,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox x:Name="txtEmail" HorizontalAlignment="Left" FontSize="30" Margin="255,842,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="805"/>
            <TextBlock x:Name="txtEmailError" Foreground="Red" FontSize="14" Margin="255,885,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Label Content="Emergency contact name *" FontSize="20" HorizontalAlignment="Left" Margin="255,905,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox x:Name="txtEmergencyName" HorizontalAlignment="Left" FontSize="30" Margin="255,945,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="320"/>
            <TextBlock x:Name="txtEmergencyNameError" Foreground="Red" FontSize="14" Margin="255,988,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Label Content="Emergency contact number *" FontSize="20" HorizontalAlignment="Left" Margin="615,905,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox x:Name="txtEmergencyNumber" HorizontalAlignment="Left" FontSize="30" Margin="620,945,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="445"/>
            <TextBlock x:Name="txtEmergencyNumberError" Foreground="Red" FontSize="14" Margin="620,988,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Label Content="Employment Informations" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.096,5.165" Margin="255,1023,0,0" Grid.Row="1" FontWeight="Bold"/>

            <Label Content="Employee ID *" FontSize="20" HorizontalAlignment="Left" Margin="465,131,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox x:Name="txtEmployeeID" HorizontalAlignment="Left" FontSize="30" Margin="465,169,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <TextBlock x:Name="txtEmployeeIDError" Foreground="Red" FontSize="14" Margin="465,210,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
            <Button Content="Search" Cursor="Hand"
        Width="160"
        Height="40"
        Margin="755,166,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top" 
        Grid.Row="1"
        Foreground="white"
        Click="Search_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="black" 
                    CornerRadius="20" 
                    BorderBrush="Black" 
                    BorderThickness="1">
                            <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                                <Image Source="/Icon/magnifying-glass.png" 
                           Width="20" 
                           Height="20" 
                           Margin="0,0,8,0"/>
                                <TextBlock Text="Search" 
                              Foreground="{TemplateBinding Foreground}"
                              VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Label Content="Employee role *" FontSize="20" HorizontalAlignment="Left" Margin="251,1117,0,0" 
Grid.Row="1" VerticalAlignment="Top"/>

            <ComboBox x:Name="cmbRole" SelectionChanged="RoleSelectionChanged" HorizontalAlignment="Left" Margin="255,1154,0,0" Grid.Row="1" VerticalAlignment="Top" 
   Width="255" Height="42" FontSize="16" SelectedIndex="-1"
   Style="{StaticResource TextBoxStyleComboBox}">
                <ComboBoxItem>Barber</ComboBoxItem>
                <ComboBoxItem>Cashier</ComboBoxItem>
            </ComboBox>
            <TextBlock x:Name="txtRoleError" Foreground="Red" FontSize="14" Margin="255,1198,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Label Content="Employee Password *" FontSize="20" HorizontalAlignment="Left" Margin="535,1114,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox x:Name="txtEmployeePassword" HorizontalAlignment="Left" FontSize="30" Margin="540,1152,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
            <TextBlock x:Name="txtPasswordError" Foreground="Red" FontSize="14" Margin="540,1198,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
            <TextBlock x:Name="txtPasswordSame" Foreground="Red" FontSize="14" Margin="540,1200,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
            <Button Content="Generate Password" x:Name="btnGeneratePassword"
Width="220"
Height="40"
Margin="845,1149,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="Blue"
Click="btnGeneratePassword_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="white" 
            CornerRadius="20" 
            BorderBrush="Black" 
            BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"
                            TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Label Content="Employee nickname *" FontSize="20" HorizontalAlignment="Left" Margin="255,1230,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox x:Name="txtNickname" HorizontalAlignment="Left" FontSize="30" Margin="255,1267,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="420"/>
            <TextBlock x:Name="txtNicknameError" Foreground="Red" FontSize="14" Margin="255,1310,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
            <TextBlock x:Name="txtNicknameTaken" Foreground="Red" FontSize="14" Margin="255,1308,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
            
            <Label Content="Barber Expertise *" FontSize="20" HorizontalAlignment="Left" Margin="720,1229,0,0" 
Grid.Row="1" VerticalAlignment="Top"/>

            <ComboBox x:Name="cmbBarberExpertise" HorizontalAlignment="Left"  Margin="720,1266,0,0" Grid.Row="1" VerticalAlignment="Top" 
   Width="335" Height="45" FontSize="16" SelectedIndex="-1"
   Style="{StaticResource TextBoxStyleComboBox}">
                <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Barber Expertise</ComboBoxItem>
                <ComboBoxItem>Balayager</ComboBoxItem>
                <ComboBoxItem>Bleaching</ComboBoxItem>
                <ComboBoxItem>Blaids</ComboBoxItem>
                <ComboBoxItem>Haircolor</ComboBoxItem>
                <ComboBoxItem>Haircut</ComboBoxItem>
                <ComboBoxItem>Hairdye</ComboBoxItem>
                <ComboBoxItem>Perm</ComboBoxItem>
                <ComboBoxItem>Rebond</ComboBoxItem>
            </ComboBox>
            <TextBlock x:Name="txtBarberExpertiseError" Foreground="Red" FontSize="14" Margin="720,1310,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Label Content="Date Hired *" FontSize="20" HorizontalAlignment="Left" Margin="255,1350,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <DatePicker HorizontalAlignment="Left" x:Name="dateHiredPicker"
                        Margin="255,1390,0,0" 
                        Grid.Row="1" 
                        VerticalAlignment="Top" 
                        Width="415"
                        Style="{StaticResource TextBoxStyleDatePicker}"
                        Tag="Select Date Hired"/>
            <TextBlock x:Name="txtDateHiredError" Foreground="Red" FontSize="14" Margin="255,1435,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Label Content="Employment Status *" FontSize="20" HorizontalAlignment="Left" Margin="730,1350,0,0" 
Grid.Row="1" VerticalAlignment="Top"/>

            <ComboBox x:Name="cmbEmploymentStatus" HorizontalAlignment="Left" Margin="730,1390,0,0" Grid.Row="1" VerticalAlignment="Top" 
   Width="335" Height="40" FontSize="16" SelectedIndex="-1"
   Style="{StaticResource TextBoxStyleComboBox}">
                <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Employment Status</ComboBoxItem>
                <ComboBoxItem>Full-time</ComboBoxItem>
                <ComboBoxItem>Part-time</ComboBoxItem>
                <ComboBoxItem>On-call</ComboBoxItem>
            </ComboBox>
            <TextBlock x:Name="txtEmploymentStatusError" Foreground="Red" FontSize="14" Margin="730,1435,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Label Content="Work Schedule *" FontSize="20" HorizontalAlignment="Left" Margin="255,1465,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <UniformGrid x:Name="workSchedulePanel" Grid.Row="1" Margin="255,1505,0,841" 
 Rows="5" Columns="3" HorizontalAlignment="Left" Width="691">
                <CheckBox Content="Monday" FontSize="20" Height="40" 
  VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="5"/>
                <CheckBox Content="Thursday" FontSize="20" Height="40" 
  VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="5"/>
                <CheckBox Content="Sunday" FontSize="20" Height="40" 
  VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="5"/>

                <CheckBox Content="Tuesday" FontSize="20" Height="40" 
  VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="5"/>
                <CheckBox Content="Friday" FontSize="20" Height="40" 
  VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="5"/>
                <TextBlock/>

                <CheckBox Content="Wednesday" FontSize="20" Height="40" 
  VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="5"/>
                <CheckBox Content="Saturday" FontSize="20" Height="40" 
  VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="5"/>
                
                <TextBlock/>
            </UniformGrid>
            <TextBlock x:Name="txtWorkScheduleError" Foreground="Red" FontSize="14" Margin="255,1650,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

            <Button Content="Delete" Cursor="Hand"
    Width="240"
    Height="60"
    Margin="435,1750,0,0"
    HorizontalAlignment="Left"
    VerticalAlignment="Top" Grid.Row="1"
    Foreground="White" FontSize="20" FontWeight="Bold"
    Click="Delete_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Black" 
                CornerRadius="30" 
                BorderBrush="Black" 
                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      RecognizesAccessKey="True"
                      TextBlock.Foreground="White"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>



            <Button Content="Update" Cursor="Hand"
    Width="240"
    Height="60"
    Margin="705,1750,0,0"
    HorizontalAlignment="Left"
    VerticalAlignment="Top" Grid.Row="1"
    Foreground="White" FontSize="20" FontWeight="Bold"
    Click="Update_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Blue" 
                CornerRadius="30" 
                BorderBrush="Blue" 
                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      RecognizesAccessKey="True"
                      TextBlock.Foreground="White"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Gray Overlay for Modal Effect -->
            <Border x:Name="ModalOverlay"
                Grid.RowSpan="3"
                Background="#80000000"
                Visibility="Collapsed"
                IsHitTestVisible="True"/>
            
        </Grid>
    </ScrollViewer>
</Window>