<Window x:Class="Capstone.AttendanceReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="PayrollHistory" Height="700" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="White">

    <Grid>
        <!-- Page Title -->
        <Label Content="Advance Report" FontSize="20" FontWeight="Bold" Margin="65,100,0,15"/>

        <!-- Header Section -->
        <Grid Height="50" VerticalAlignment="Top" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <!-- Home - on the left side -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
        MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="60,0,15,0">
                <Image Source="/Icon/arrow-left.png" Width="30" Height="30"/>
                <Label Content="Back" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- Empty space in middle -->
            <StackPanel Grid.Column="1"/>

            <!-- Notification -->
            <Image Source="/Icon/bell.png" Width="30" Height="30" Grid.Column="2" Margin="0,0,15,0" VerticalAlignment="Center"/>

            <!-- Settings -->
            <Image Source="/Icon/gear.png" Width="30" Height="30" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,60,0"/>
        </Grid>

        <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="65,135,60,20">
            <StackPanel Margin="0,110,0,0">
                <DataGrid x:Name="EmployeeGrid" AutoGenerateColumns="False"
      CanUserAddRows="False" CanUserDeleteRows="False"
      HeadersVisibility="Column"
      RowHeight="35" FontSize="14"
      BorderBrush="#DDD" BorderThickness="1"
      GridLinesVisibility="All">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Black"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Employee Name" Binding="{Binding EmployeeName}" Width="*"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding EmployeeRole}" Width="*"/>
                        <DataGridTextColumn Header="Time In" Binding="{Binding ContactNumber}" Width="*"/>
                        <DataGridTextColumn Header="Time Out" Binding="{Binding EmergencyContactDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding EmergencyContactDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding EmergencyContactDisplay}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination Controls -->
                <StackPanel x:Name="PaginationPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <Label Content="Employee ID *" FontSize="20" HorizontalAlignment="Left" Margin="85,170,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmployeeID" HorizontalAlignment="Left" FontSize="30" Margin="85,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <TextBlock x:Name="txtEmployeeIDError" Foreground="Red" FontSize="14" Margin="465,210,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
        <Button Width="160"
        Height="40"
        Margin="320,210,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top" 
        Grid.Row="1"
        Foreground="white">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="black" 
                    CornerRadius="20" 
                    BorderBrush="Black" 
                    BorderThickness="1">
                        <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                            <Image Source="/Icon/magnifying-glass.png" 
                           Width="20" 
                           Height="20" 
                           Margin="0,0,8,0"/>
                            <TextBlock Text="Search" 
                              Foreground="{TemplateBinding Foreground}"
                              VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Export -->
        <Button Width="160"
        Height="40"
        Margin="1030,210,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top" 
        Grid.Row="1"
        Foreground="Blue">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="White" 
                    CornerRadius="20" 
                    BorderBrush="gray" 
                    BorderThickness="1">
                        <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                            <Image Source="/Icon/export (1).png" 
                           Width="20" 
                           Height="20" 
                           Margin="0,0,8,0"/>
                            <TextBlock Text="Export" 
                              Foreground="{TemplateBinding Foreground}"
                              VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
