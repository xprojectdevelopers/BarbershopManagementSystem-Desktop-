<Window x:Class="Capstone.Appointments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="Appointments" WindowState="Maximized" Height="700" Width="1200" ResizeMode="CanResize"
 Background="White" >
    <Grid>
        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="40,40,35,536" Width="1205">
            <Grid Margin="20,0,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Home - on the left side -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
                    Cursor="Hand" Margin="0,0,15,0">
                    <Image Source="/Icon/house.png" Width="30" Height="30"/>
                    <Label Content="Home" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Empty space in middle -->
                <StackPanel Grid.Column="1"/>

                <!-- Notification -->
                <Image Source="/Icon/bell.png" Width="30" Height="30" Grid.Column="1" Margin="957,0,31,0" VerticalAlignment="Center"/>

                <!-- Settings -->
                <Image Source="/Icon/gear.png" Width="30" Height="30" Grid.Column="3" VerticalAlignment="Center"/>
            </Grid>

            <!-- Page Title -->
            <Label Content="Appointment" FontSize="20" FontWeight="Bold" Margin="20,20,20,15"/>
        </StackPanel>

        <!-- UniformGrid Section -->
        <UniformGrid Columns="3" Rows="1" Margin="55,128,55,356" Height="200">
            <!-- Employees Profile -->
            <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Icon/Book_Appointment.png" Stretch="Uniform" Width="120" Height="100"/>
                    <Button Content="Book Appointments"
                        Background="#FF004AFF" Foreground="White"
                        FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                        Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Payroll History -->
            <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Icon/Appointment_Records.png" Stretch="Uniform" Width="120" Height="100"/>
                    <Button Content="Appointment Records"
                        Background="Black" Foreground="White"
                        FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                        Click="Purchased_Click" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>


            <!-- Attendance Report -->
            <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Icon/Manage_Service.png" Stretch="Uniform" Width="120" Height="100"/>
                    <Button Content="Manage Services"
                        Background="Black" Foreground="White"
                        FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                        Click="Sales_Click" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- DataGrid Section -->
        <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="55,338,55,30">
            <StackPanel>
                <TextBlock Text="Appointment Requests"
                    FontSize="20" FontWeight="Bold"
                    HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <DataGrid x:Name="EmployeeGrid" AutoGenerateColumns="False"
                    CanUserAddRows="False" CanUserDeleteRows="False"
                    HeadersVisibility="Column"
                    RowHeight="35" FontSize="14"
                    BorderBrush="#DDD" BorderThickness="1"
                    GridLinesVisibility="All">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="Black"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Appointment Number" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Customer Badge" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Customer Name" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Contact Number" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Assigned Barber" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Service" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Time" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Payment Method" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Action" Binding="{Binding EmployeeID}" Width="*"/>

                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination Controls -->
                <StackPanel x:Name="PaginationPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
