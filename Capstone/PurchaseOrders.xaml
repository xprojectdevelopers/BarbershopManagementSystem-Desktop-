<Window x:Class="Capstone.PurchaseOrders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="AddItem"         Height="605" 
        Width="890" 
        MinWidth="400"
        MinHeight="400"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="None">

    <Window.Resources>

        <Style x:Key="TextBoxStyleDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TextBox part -->
                                    <DatePickerTextBox Grid.Column="0" 
                                               x:Name="PART_TextBox"
                                               Margin="{TemplateBinding Padding}"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               FontSize="{TemplateBinding FontSize}"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="0"
                                       x:Name="PlaceholderText"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="Gray"
                                       FontSize="{TemplateBinding FontSize}"
                                       Margin="{TemplateBinding Padding}"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>

                                    <!-- Calendar button -->
                                    <Button Grid.Column="1" 
                                    x:Name="PART_Button"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center">
                                        <!-- Calendar icon -->
                                        <Path Fill="Gray" 
                                      Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                                      Stretch="Uniform"
                                      Width="12"
                                      Height="12"/>
                                    </Button>

                                    <!-- Popup for calendar -->
                                    <Popup Grid.Column="0" Grid.ColumnSpan="2"
                                   x:Name="PART_Popup"
                                   PlacementTarget="{Binding ElementName=Border}"
                                   Placement="Bottom"
                                   StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show placeholder -->
                            <Trigger Property="SelectedDate" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <!-- Hide placeholder-->
                            <DataTrigger Binding="{Binding SelectedDate, RelativeSource={RelativeSource Self}}">
                                <DataTrigger.Value>
                                    <x:Null/>
                                </DataTrigger.Value>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyleComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content Presenter -->
                                    <ContentPresenter Grid.Column="0"
                                                  x:Name="PART_ContentPresenter"
                                                  Margin="{TemplateBinding Padding}"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  HorizontalAlignment="Left"
                                                  IsHitTestVisible="False"/>

                                    <ToggleButton Grid.Column="1"
                                              x:Name="PART_DropDownToggle"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Width="20"
                                              Height="20"
                                              Margin="0,0,8,0"
                                              VerticalAlignment="Center"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press">
                                        <Path Fill="Gray"
                                          Data="M7,10L12,15L17,10H7Z"
                                          Stretch="Uniform"
                                          Width="10"
                                          Height="8"/>
                                    </ToggleButton>

                                    <!-- Popup -->
                                    <Popup x:Name="PART_Popup"
                                       Grid.ColumnSpan="2"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding ElementName=Border}"
                                       StaysOpen="False">
                                        <Border Background="White"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            MinWidth="{Binding ActualWidth, ElementName=Border}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                            <!-- Focus effect -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="35,20,35,30">
            <StackPanel Margin="-20,30,0,0">
                <TextBlock Text="Purchase Item"
                   FontSize="30" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,20,0,20"/>

                <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="110,-70,30,0" Width="1020">
                    <Label Content="Process By" FontSize="20" HorizontalAlignment="Left" Margin="57,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" FontSize="30" Margin="-104,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
                    <TextBlock x:Name="txtEmergencyNameError" Foreground="Red" FontSize="14" Margin="255,898,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

                    <Label Content="Item ID" FontSize="20" HorizontalAlignment="Left" Margin="40,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                    <ComboBox Margin="-75,117,0,0" Width="200" Height="47" FontSize="16" SelectedIndex="-1"
          Style="{StaticResource TextBoxStyleComboBox}">
                        <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">All Items</ComboBoxItem>
                        <ComboBoxItem>Male</ComboBoxItem>
                        <ComboBoxItem>Female</ComboBoxItem>
                        <ComboBoxItem>Prefer not to say</ComboBoxItem>
                    </ComboBox>
                    <TextBlock x:Name="txtEmergencyNumberError" Foreground="Red" FontSize="14" Margin="620,898,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="3,-50,30,0" Width="1034">
                    <Label Content="Item Name" FontSize="20" HorizontalAlignment="Left" Margin="50,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" FontSize="30" Margin="-109,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
                    <TextBlock Foreground="Red" FontSize="14" Margin="255,898,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

                    <Label Content="Quantity" FontSize="20" HorizontalAlignment="Left" Margin="40,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" FontSize="30" Margin="-87,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
                    <TextBlock Foreground="Red" FontSize="14" Margin="620,898,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

                    <Label Content="Date" FontSize="20" HorizontalAlignment="Left" Margin="40,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                    <DatePicker Style="{StaticResource TextBoxStyleDatePicker}" 
            Tag="Select Start Date"
            HorizontalAlignment="Left" 
            Margin="-52,117,0,0" 
            VerticalAlignment="Top" 
            Width="205"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="190,-10,0,0">

                    <Button Content="Cancel"
Width="205"
Height="40"
Margin="0,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="black" 
            CornerRadius="20" 
            BorderBrush="Black" 
            BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Update"
Width="205"
Height="40"
Margin="30,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="blue" 
            CornerRadius="20" 
            BorderBrush="blue" 
            BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>


        </Border>
    </Grid>
</Window>
