<Window x:Class="Capstone.PayrollHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="PayrollHistory" Height="700" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="White">

    <Window.Resources>
        <local:PesoConverter x:Key="PesoConverter"/>
        
        <!-- Responsive button style for notification and settings -->
<Style x:Key="ResponsiveButton" TargetType="Button">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="12"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="MinWidth" Value="40"/>
    <Setter Property="MinHeight" Value="40"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="Button">
                <Border Background="{TemplateBinding Background}" 
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
Padding="{TemplateBinding Padding}"
CornerRadius="20">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="Transparent"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="Transparent"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>

<!-- Simple icon style for top bar (no converter needed) -->
<Style x:Key="TopBarIcon" TargetType="Image">
    <Setter Property="Width" Value="24"/>
    <Setter Property="Height" Value="24"/>
</Style>
    </Window.Resources>

    <Grid>
        <!-- Page Title -->
        <Label Content="Payroll History" FontSize="20" FontWeight="Bold" Margin="65,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Grid Margin="60,-570,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Home - on the left side -->
            <!-- Back - on the left side -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="0,0,15,0">
                <Image Source="/Icon/arrow-left.png" Width="30" Height="30"/>
                <Label Content="Back" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- Empty space in middle -->
            <StackPanel Grid.Column="1"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>



                <!-- Settings Icon -->
                <Button  
Margin="1095,0,0,0" 
Style="{StaticResource ResponsiveButton}"
ToolTip="Settings" Grid.ColumnSpan="3" HorizontalAlignment="Left" Click="Setting_Click">
                    <Image Source="/Icon/gear.png" Style="{StaticResource TopBarIcon}"/>
                </Button>
            </Grid>
        </Grid>

        <!-- Main Container -->
        <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" 
                Margin="65,150,60,60"
                Background="White">
            <Grid>
                <!-- Search -->
                <Label Content="Employee ID *" FontSize="20" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtEmployeeID" VerticalContentAlignment="Center" HorizontalAlignment="Left" FontSize="20" Margin="20,57,0,0" VerticalAlignment="Top" Width="205" Height="43"/>
                <TextBlock x:Name="txtEmployeeIDError" Foreground="Red" FontSize="14" Margin="400,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

                <!-- Search Button -->
                <Button Width="160"
                        Height="40" Cursor="Hand"
                        Margin="255,60,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Foreground="white">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="black" CornerRadius="20" BorderBrush="Black" BorderThickness="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="/Icon/magnifying-glass.png" Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Search" Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Export Button -->
                <Button Width="160"
                        Height="40" Cursor="Hand"
                        Margin="0,60,20,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top" 
                        Click="ExportButton_Click"
                        Foreground="Blue">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" CornerRadius="20" BorderBrush="gray" BorderThickness="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="/Icon/export.png" Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Export" Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- DataGrid -->
                <Grid Background="White" Margin="0,120,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="EmployeeGrid" 
                              Grid.Row="0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False" 
                              CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              RowHeight="35" 
                              FontSize="14"
                              BorderBrush="Transparent" 
                              BorderThickness="0"
                              GridLinesVisibility="All"
                              Background="White">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmID}" Width="*"/>
                            <DataGridTextColumn Header="Employee Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding BRole}" Width="*"/>

                            <DataGridTemplateColumn Header="Gross Pay" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GrossPay, Converter={StaticResource PesoConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Saving Fund" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SavingFund, Converter={StaticResource PesoConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Cash Advance" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CashAdvance, Converter={StaticResource PesoConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Attendance Deduction" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Absent, Converter={StaticResource PesoConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Net Pay" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding NetPay, Converter={StaticResource PesoConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Date Release" Binding="{Binding Release}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel x:Name="PaginationPanel" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Background="White" Margin="0,10,0,10"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Gray Overlay for Modal Effect -->
        <Border x:Name="ModalOverlay"
        Grid.RowSpan="3"
        Background="#80000000"
        Visibility="Collapsed"
        IsHitTestVisible="True"
        MouseLeftButtonDown="ModalOverlay_Click"/>
    </Grid>
</Window>
