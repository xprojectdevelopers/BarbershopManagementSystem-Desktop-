<Window x:Class="Capstone.SaleItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="AddItem"         Height="605" 
        Width="890" 
        MinWidth="400"
        MinHeight="400"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="None">

    <Window.Resources>

        <Style x:Key="TextBoxStyleDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TextBox part -->
                                    <DatePickerTextBox Grid.Column="0" 
                                               x:Name="PART_TextBox"
                                               Margin="{TemplateBinding Padding}"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               FontSize="{TemplateBinding FontSize}"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="0"
                                       x:Name="PlaceholderText"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="Gray"
                                       FontSize="{TemplateBinding FontSize}"
                                       Margin="{TemplateBinding Padding}"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>

                                    <!-- Calendar button -->
                                    <Button Grid.Column="1" 
                                    x:Name="PART_Button"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center">
                                        <!-- Calendar icon -->
                                        <Path Fill="Gray" 
                                      Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                                      Stretch="Uniform"
                                      Width="12"
                                      Height="12"/>
                                    </Button>

                                    <!-- Popup for calendar -->
                                    <Popup Grid.Column="0" Grid.ColumnSpan="2"
                                   x:Name="PART_Popup"
                                   PlacementTarget="{Binding ElementName=Border}"
                                   Placement="Bottom"
                                   StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show placeholder -->
                            <Trigger Property="SelectedDate" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <!-- Hide placeholder-->
                            <DataTrigger Binding="{Binding SelectedDate, RelativeSource={RelativeSource Self}}">
                                <DataTrigger.Value>
                                    <x:Null/>
                                </DataTrigger.Value>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyleComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content Presenter -->
                                    <ContentPresenter Grid.Column="0"
                                                  x:Name="PART_ContentPresenter"
                                                  Margin="{TemplateBinding Padding}"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  HorizontalAlignment="Left"
                                                  IsHitTestVisible="False"/>

                                    <ToggleButton Grid.Column="1"
                                              x:Name="PART_DropDownToggle"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Width="20"
                                              Height="20"
                                              Margin="0,0,8,0"
                                              VerticalAlignment="Center"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press">
                                        <Path Fill="Gray"
                                          Data="M7,10L12,15L17,10H7Z"
                                          Stretch="Uniform"
                                          Width="10"
                                          Height="8"/>
                                    </ToggleButton>

                                    <!-- Popup -->
                                    <Popup x:Name="PART_Popup"
                                       Grid.ColumnSpan="2"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding ElementName=Border}"
                                       StaysOpen="False">
                                        <Border Background="White"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            MinWidth="{Binding ActualWidth, ElementName=Border}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                            <!-- Focus effect -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="35,20,35,30">
            <StackPanel Margin="-20,30,-31,0">
                <TextBlock Text="Sale Item"
                   FontSize="30" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,20,0,20"/>

                <Grid Margin="200,20,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Item Name -->
                    <Label Content="Processed By" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtProcess" FontSize="20" Grid.Row="1" Grid.Column="0" Height="47"/>
                    <TextBlock x:Name="txtProcessError" Foreground="Red" FontSize="12" 
                Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                VerticalAlignment="Top" Visibility="Collapsed"/>

                    <!-- Category -->
                    <Label Content="Item ID" FontSize="20" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbItemID" SelectionChanged="cmbItemID_SelectionChanged" Grid.Row="1" Grid.Column="2" Height="47" FontSize="16" 
               SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}" HorizontalAlignment="Left" Margin="0,0,0,30" Grid.RowSpan="2" Width="205">
                        <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Item ID</ComboBoxItem>
                    </ComboBox>
                    <TextBlock x:Name="cmbItemIDError" Foreground="Red" FontSize="12" 
                Grid.Row="2" Grid.Column="2" Margin="0,2,0,0"
                VerticalAlignment="Top" Visibility="Collapsed"/>
                </Grid>

                <!-- Row 2: Supplier Name, Contact Number, Date -->
                <Grid Margin="60,-10,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Supplier Name -->
                    <Label Content="Item Name" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtItemName" FontSize="30" Grid.Row="1" Grid.Column="0" Height="47"/>
                    <TextBlock x:Name="txtItemNameError" Foreground="Red" FontSize="12" 
                Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                VerticalAlignment="Top" Visibility="Collapsed"/>

                    <!-- Supplier Contact Number -->
                    <Label Content="Quantity" FontSize="17" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtQuantity" FontSize="30" Grid.Row="1" Grid.Column="2" Height="47"/>
                    <TextBlock x:Name="txtQuantityError" Foreground="Red" FontSize="12" 
                Grid.Row="2" Grid.Column="2" Margin="0,2,0,0"
                VerticalAlignment="Top" Visibility="Collapsed"/>

                    <!-- Date -->
                    <Label Content="Date" FontSize="20" Grid.Row="0" Grid.Column="4" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <DatePicker Style="{StaticResource TextBoxStyleDatePicker}" x:Name="ItemDate"
                 Tag="Select Date" Grid.Row="1" Grid.Column="4" Width="205"/>
                    <TextBlock x:Name="txtDateError" Foreground="Red" FontSize="12" 
                Grid.Row="2" Grid.Column="4" Margin="0,2,0,0"
                VerticalAlignment="Top" Visibility="Collapsed"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="190,-10,0,0">

                    <Button Content="Cancel"
Width="205"
Height="40"
Margin="0,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white" Click="btnCancel_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="black" 
            CornerRadius="20" 
            BorderBrush="Black" 
            BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Stock Out"
Width="205"
Height="40"
Margin="30,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white" Click="btnStockIn_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="blue" 
            CornerRadius="20" 
            BorderBrush="blue" 
            BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Gray Overlay for Modal Effect -->
        <Border x:Name="ModalOverlay"
Grid.RowSpan="3"
Background="#80000000"
Visibility="Collapsed"
IsHitTestVisible="True"/>
    </Grid>
</Window>
