<Window x:Class="Capstone.AddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="AddItem" Height="605" 
        Width="890" 
        MinWidth="400"
        MinHeight="400"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.Resources>

        <Style x:Key="TextBoxStyleDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TextBox part -->
                                    <DatePickerTextBox Grid.Column="0" 
                                               x:Name="PART_TextBox"
                                               Margin="{TemplateBinding Padding}"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               FontSize="{TemplateBinding FontSize}"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="0"
                                       x:Name="PlaceholderText"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="Gray"
                                       FontSize="{TemplateBinding FontSize}"
                                       Margin="{TemplateBinding Padding}"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>

                                    <!-- Calendar button -->
                                    <Button Grid.Column="1" 
                                    x:Name="PART_Button"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center">
                                        <!-- Calendar icon -->
                                        <Path Fill="Gray" 
                                      Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                                      Stretch="Uniform"
                                      Width="12"
                                      Height="12"/>
                                    </Button>

                                    <!-- Popup for calendar -->
                                    <Popup Grid.Column="0" Grid.ColumnSpan="2"
                                   x:Name="PART_Popup"
                                   PlacementTarget="{Binding ElementName=Border}"
                                   Placement="Bottom"
                                   StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show placeholder when no date selected -->
                            <Trigger Property="SelectedDate" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyleComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content Presenter -->
                                    <ContentPresenter Grid.Column="0"
                                                  x:Name="PART_ContentPresenter"
                                                  Margin="{TemplateBinding Padding}"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  HorizontalAlignment="Left"
                                                  IsHitTestVisible="False"/>

                                    <ToggleButton Grid.Column="1"
                                              x:Name="PART_DropDownToggle"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Width="20"
                                              Height="20"
                                              Margin="0,0,8,0"
                                              VerticalAlignment="Center"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press">
                                        <Path Fill="Gray"
                                          Data="M7,10L12,15L17,10H7Z"
                                          Stretch="Uniform"
                                          Width="10"
                                          Height="8"/>
                                    </ToggleButton>

                                    <!-- Popup -->
                                    <Popup x:Name="PART_Popup"
                                       Grid.ColumnSpan="2"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding ElementName=Border}"
                                       StaysOpen="False">
                                        <Border Background="White"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            MinWidth="{Binding ActualWidth, ElementName=Border}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                            <!-- Focus effect -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="35,20,35,30">
            <StackPanel Margin="-20,0,0,0">
                <TextBlock Text="Add New Item"
                   FontSize="30" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>
                <!-- Header Section -->
                <!-- Item ID Row -->
                <Grid Margin="230,0,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Product ID" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="00,0,0,0">
                        <TextBox x:Name="txtItemID" FontSize="30" Width="205" Height="47" VerticalAlignment="Top"/>
                        <Button Content="Generate ID" Click="btnGenerateID_Click"
                                Width="160" Height="40" Margin="20,0,0,0" Cursor="Hand"
                                Foreground="blue" VerticalAlignment="Top">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="white" CornerRadius="20" BorderBrush="Black" BorderThickness="1">
                                        <TextBlock Text="{TemplateBinding Content}"
                                                   Foreground="{TemplateBinding Foreground}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                    <TextBlock x:Name="txtItemIDError" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtItemIDSame" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>
                </Grid>

                <!-- Row 1: Item Name, Category, Price -->
                <Grid Margin="40,-10,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Item Name -->
                    <Label Content="Product Name" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtItemName" FontSize="30" Grid.Row="1" Grid.Column="0" Height="47"/>
                    <TextBlock x:Name="txtItemNameError" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtItemNameSame" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>

                    <!-- Category -->
                    <Label Content="Category" FontSize="20" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <ComboBox x:Name="Category" Grid.Row="1" Grid.Column="2" Height="47" FontSize="16" 
                              SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}">
                        <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Category</ComboBoxItem>
                        <ComboBoxItem>Aftershaves</ComboBoxItem>
                        <ComboBoxItem>Clays</ComboBoxItem>
                        <ComboBoxItem>Clippers and trimmers</ComboBoxItem>
                        <ComboBoxItem>Combs and brushes</ComboBoxItem>
                        <ComboBoxItem>Conditioners</ComboBoxItem>
                        <ComboBoxItem>Gel</ComboBoxItem>
                        <ComboBoxItem>Hair dyes</ComboBoxItem>
                        <ComboBoxItem>Hair sprays</ComboBoxItem>
                        <ComboBoxItem>Pomades</ComboBoxItem>
                        <ComboBoxItem>Razor and blades</ComboBoxItem>
                        <ComboBoxItem>Scissors</ComboBoxItem>
                        <ComboBoxItem>Shampoos</ComboBoxItem>
                        <ComboBoxItem>Shavings creams</ComboBoxItem>
                        <ComboBoxItem>Towels</ComboBoxItem>
                        <ComboBoxItem>Waxes</ComboBoxItem>
                    </ComboBox>
                    <TextBlock x:Name="txtCategoryError" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="2" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtCategorySame" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="2" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>

                    <!-- Price with Peso Symbol -->
                    <Label Content="Price" FontSize="20" Grid.Row="0" Grid.Column="4" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <Grid Grid.Row="1" Grid.Column="4">
                        <TextBox x:Name="txtPrice" 
                                 FontSize="30" 
                                 Height="47"
                                 Padding="30,0,10,0"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="Gray"
                                 BorderThickness="1"/>
                        <TextBlock Text="₱" 
                                   FontSize="30"
                                   Foreground="Black"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   IsHitTestVisible="False"/>
                    </Grid>
                    <TextBlock x:Name="txtPriceError" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="4" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>
                </Grid>

                <!-- Row 2: Supplier Name, Contact Number, Date -->
                <Grid Margin="40,-10,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Supplier Name -->
                    <Label Content="Supplier Name" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtSupplierName" FontSize="30" Grid.Row="1" Grid.Column="0" Height="47"/>
                    <TextBlock x:Name="txtSupplierNameError" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtSupplierNameSame" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>

                    <!-- Supplier Contact Number -->
                    <Label Content="Supplier Contact Number" FontSize="17" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtSCNumber" FontSize="30" Grid.Row="1" Grid.Column="2" Height="47"/>
                    <TextBlock x:Name="txtSCNumberError" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="2" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>

                    <!-- Date -->
                    <Label Content="Date" FontSize="20" Grid.Row="0" Grid.Column="4" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <DatePicker Style="{StaticResource TextBoxStyleDatePicker}" x:Name="ItemDate"
                                Tag="Select Start Date" Grid.Row="1" Grid.Column="4" Width="205"/>
                    <TextBlock x:Name="txtDateError" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="4" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="190,-10,0,0">

                    <Button Content="Cancel" Cursor="Hand" Click="btnCancel_Click"
Width="205"
Height="40"
Margin="0,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="black" 
            CornerRadius="20" 
            BorderBrush="Black" 
            BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Save" Cursor="Hand"
Width="205"
Height="40"
Margin="68,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white" Click="SaveButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="blue" 
            CornerRadius="20" 
            BorderBrush="blue" 
            BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>


        </Border>

        <!-- Gray Overlay for Modal Effect -->
        <Border x:Name="ModalOverlay"
     Grid.RowSpan="3"
     Background="#80000000"
     Visibility="Collapsed"
     IsHitTestVisible="True"/>
    </Grid>
</Window>