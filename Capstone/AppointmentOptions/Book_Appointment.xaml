<Window x:Class="Capstone.AppointmentOptions.Book_Appointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d" 
        Title="Appointment Information" Height="900" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanResize" 
        Background="White">

    <Window.Resources>

        <Style x:Key="TextBoxStyleDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Name="Border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TextBox part -->
                                    <DatePickerTextBox Grid.Column="0" 
                                       x:Name="PART_TextBox"
                                       Margin="{TemplateBinding Padding}"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="0"
                               x:Name="PlaceholderText"
                               Text="{TemplateBinding Tag}"
                               Foreground="Gray"
                               FontSize="{TemplateBinding FontSize}"
                               Margin="{TemplateBinding Padding}"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Collapsed"/>

                                    <!-- Calendar button -->
                                    <Button Grid.Column="1" 
                            x:Name="PART_Button"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center">
                                        <!-- Calendar icon -->
                                        <Path Fill="Gray" 
                              Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                              Stretch="Uniform"
                              Width="12"
                              Height="12"/>
                                    </Button>

                                    <!-- Popup for calendar -->
                                    <Popup Grid.Column="0" Grid.ColumnSpan="2"
                           x:Name="PART_Popup"
                           PlacementTarget="{Binding ElementName=Border}"
                           Placement="Bottom"
                           StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show placeholder when no date selected -->
                            <Trigger Property="SelectedDate" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyleComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content Presenter -->
                                    <ContentPresenter Grid.Column="0"
                                                      x:Name="PART_ContentPresenter"
                                                      Margin="{TemplateBinding Padding}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      HorizontalAlignment="Left"
                                                      IsHitTestVisible="False"/>

                                    <ToggleButton Grid.Column="1"
                                                  x:Name="PART_DropDownToggle"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Width="20"
                                                  Height="20"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <Path Fill="Gray"
                                              Data="M7,10L12,15L17,10H7Z"
                                              Stretch="Uniform"
                                              Width="10"
                                              Height="8"/>
                                    </ToggleButton>

                                    <!-- Popup -->
                                    <Popup x:Name="PART_Popup"
                                           Grid.ColumnSpan="2"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           Placement="Bottom"
                                           PlacementTarget="{Binding ElementName=Border}"
                                           StaysOpen="False">
                                        <Border Background="White"
                                                BorderBrush="Gray"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                MinWidth="{Binding ActualWidth, ElementName=Border}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                            <!-- Focus effect -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Responsive button style for notification and settings -->
        <Style x:Key="ResponsiveButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                Padding="{TemplateBinding Padding}"
                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple icon style for top bar (no converter needed) -->
        <Style x:Key="TopBarIcon" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Scroll container for entire content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      PanningMode="VerticalOnly">
            <StackPanel Margin="40">

                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Home - on the left side -->
                    <!-- Back - on the left side -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
                        MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="0,0,15,0">
                        <Image Source="/Icon/arrow-left.png" Width="30" Height="30"/>
                        <Label Content="Back" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Empty space in middle -->
                    <StackPanel Grid.Column="1"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                      

                        <!-- Settings Icon -->
                        <Button  
                        Margin="1095,0,0,0"  Cursor="Hand"
                        Style="{StaticResource ResponsiveButton}"
                        ToolTip="Settings" Grid.ColumnSpan="3" HorizontalAlignment="Left" Click="Setting_Click">
                            <Image Source="/Icon/gear.png" Style="{StaticResource TopBarIcon}"/>
                        </Button>
                    </Grid>
                </Grid>

                <!-- Page Title -->
                <Label Content="Book Appointment" FontSize="20" FontWeight="Bold" Margin="20,20,20,15"/>

                <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="0,-15,0,60" Height="670" Width="1145">
                    <StackPanel Margin="-30,0,0,0">
                        <TextBlock Text="Appointment Information"
                   FontSize="30" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,20,0,20"/>
                        <!-- Header Section -->
                        <Grid Margin="400,0,40,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="205"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Appointment Number" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" Cursor="Hand" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="00,0,0,0">
                                <TextBox x:Name="txtItemID" FontSize="30" Width="205" Height="47" VerticalAlignment="Top"/>
                                <Button Content="Generate Number"
        Width="160" Height="40" Margin="20,0,0,0" Cursor="Hand"
        Foreground="blue" VerticalAlignment="Top">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="white" CornerRadius="20" BorderBrush="Black" BorderThickness="1">
                                                <TextBlock Text="{TemplateBinding Content}"
                           Foreground="{TemplateBinding Foreground}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                            <TextBlock x:Name="txtItemIDError" Foreground="Red" FontSize="12" 
               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
               VerticalAlignment="Top" Visibility="Collapsed"/>
                            <TextBlock x:Name="txtItemIDSame" Foreground="Red" FontSize="12" 
               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
               VerticalAlignment="Top" Visibility="Collapsed"/>
                        </Grid>

                        <!-- Row 1: Item Name, Category, Price -->
                        <Grid Margin="280,-10,40,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="205"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="205"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="205"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <Label Content="Customer Name" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtItemName" FontSize="30" Grid.Row="1" Grid.Column="0" Height="47"/>

                            <Label Content="Contact Number" FontSize="20" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                            <Grid Grid.Row="1" Grid.Column="2">
                                <TextBox x:Name="txtPrice" 
                          FontSize="30" 
                          Height="47"
                          Padding="30,0,10,0"
                          VerticalContentAlignment="Center"
                          BorderBrush="Gray"
                          BorderThickness="1"/>
                            </Grid>


                            <Label Content="Assigned Barber" FontSize="20" Grid.Row="0" Grid.Column="4" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                            <ComboBox x:Name="Category" Grid.Row="1" Grid.Column="4" Height="47" FontSize="16" 
              SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}">
                                <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Assigned Barber</ComboBoxItem>
                                <ComboBoxItem>Aftershaves</ComboBoxItem>
                            </ComboBox>



                        </Grid>

                        <!-- Row 2: Supplier Name, Contact Number, Date -->
                        <Grid Margin="280,-10,40,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="205"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="205"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="93.362"/>
                                <ColumnDefinition Width="111.638"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <Label Content="Service" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                            <ComboBox Grid.Row="1" Grid.Column="0" Height="47" FontSize="16" 
SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}">
                                <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Service</ComboBoxItem>
                                <ComboBoxItem>Aftershaves</ComboBoxItem>
                            </ComboBox>

                            <Label Content="Date" FontSize="17" Grid.Column="2" VerticalAlignment="Center"/>
                            <DatePicker Style="{StaticResource TextBoxStyleDatePicker}" 
                            Tag="Select Date" Grid.Row="1" Grid.Column="2" Width="205" Grid.ColumnSpan="1" Margin="0,3,0,4"/>



                            <Label Content="Time" FontSize="20" Grid.Row="0" Grid.Column="4" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                            <ComboBox Grid.Row="1" Grid.Column="4" Height="47" FontSize="16" 
                            SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}" Grid.ColumnSpan="2" Margin="0,0,0,30" Grid.RowSpan="2">
                                <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Time</ComboBoxItem>
                                <ComboBoxItem>10:00 am</ComboBoxItem>
                                <ComboBoxItem>11:00 am</ComboBoxItem>
                                <ComboBoxItem>12:00 pm</ComboBoxItem>
                                <ComboBoxItem>1:00 pm</ComboBoxItem>
                                <ComboBoxItem>2:00 pm</ComboBoxItem>
                                <ComboBoxItem>3:00 pm</ComboBoxItem>
                                <ComboBoxItem>4:00 pm</ComboBoxItem>
                                <ComboBoxItem>5:00 pm</ComboBoxItem>
                                <ComboBoxItem>6:00 pm</ComboBoxItem>
                                <ComboBoxItem>6:30 pm</ComboBoxItem>
                                <ComboBoxItem>7:00 pm</ComboBoxItem>
                                <ComboBoxItem>7:30 pm</ComboBoxItem>
                            </ComboBox>
                        </Grid>

                        <!-- Row 2: Supplier Name, Contact Number, Date -->
                        <Grid Margin="280,-10,40,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="205"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="205"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="93.362"/>
                                <ColumnDefinition Width="111.638"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <Label Content="Total" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                            <Grid Grid.Row="1" Grid.Column="0">
                                <TextBox
             FontSize="30" 
             Height="47"
             Padding="30,0,10,0"
             VerticalContentAlignment="Center"
             BorderBrush="Gray"
             BorderThickness="1"/>
                                <TextBlock Text="₱" 
               FontSize="30"
               Foreground="Black"
               VerticalAlignment="Center"
               Margin="10,0,0,0"
               IsHitTestVisible="False"/>
                            </Grid>

                            <Label Content="Payment Method" FontSize="17" Grid.Column="2" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="1" Grid.Column="2" Height="47" FontSize="16" 
                                SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}" Margin="0,0,0,30" Grid.RowSpan="2">
                                <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Payment Method</ComboBoxItem>
                                <ComboBoxItem>Aftershaves</ComboBoxItem>
                            </ComboBox>

                            <Label Content="Payment Status" FontSize="20" Grid.Row="0" Grid.Column="4" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                            <ComboBox Grid.Row="1" Grid.Column="4" Height="47" FontSize="16" 
                            SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}" Grid.ColumnSpan="2" Margin="0,0,0,30" Grid.RowSpan="2">
                                <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Payment Status</ComboBoxItem>
                                <ComboBoxItem>Aftershaves</ComboBoxItem>
                            </ComboBox>
                        </Grid>


                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="350,-20,0,0">

                            <Button Content="View Receipt" Cursor="Hand"
Width="205"
Height="40"
Margin="0,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="black" 
            CornerRadius="20" 
            BorderBrush="Black" 
            BorderThickness="1">
                                            <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                                <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="Book Now" Cursor="Hand"
Width="205"
Height="40"
Margin="68,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="blue" 
            CornerRadius="20" 
            BorderBrush="Blue" 
            BorderThickness="1">
                                            <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                                <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Gray Overlay for Modal Effect -->
        <Border x:Name="ModalOverlay"
Grid.RowSpan="3"
Background="#80000000"
Visibility="Collapsed"
IsHitTestVisible="True"
MouseLeftButtonDown="ModalOverlay_Click" Grid.ColumnSpan="2"/>
        
    </Grid>
</Window>