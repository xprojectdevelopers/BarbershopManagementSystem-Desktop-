<Window x:Class="Capstone.AppointmentOptions.AssignNew_Service"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="AddItem" Height="605" 
        Width="890" 
        MinWidth="400"
        MinHeight="400"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.Resources>

        <Style x:Key="TextBoxStyleDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TextBox part -->
                                    <DatePickerTextBox Grid.Column="0" 
                                               x:Name="PART_TextBox"
                                               Margin="{TemplateBinding Padding}"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               FontSize="{TemplateBinding FontSize}"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="0"
                                       x:Name="PlaceholderText"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="Gray"
                                       FontSize="{TemplateBinding FontSize}"
                                       Margin="{TemplateBinding Padding}"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>

                                    <!-- Calendar button -->
                                    <Button Grid.Column="1" 
                                    x:Name="PART_Button"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center">
                                        <!-- Calendar icon -->
                                        <Path Fill="Gray" 
                                      Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                                      Stretch="Uniform"
                                      Width="12"
                                      Height="12"/>
                                    </Button>

                                    <!-- Popup for calendar -->
                                    <Popup Grid.Column="0" Grid.ColumnSpan="2"
                                   x:Name="PART_Popup"
                                   PlacementTarget="{Binding ElementName=Border}"
                                   Placement="Bottom"
                                   StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show placeholder when no date selected -->
                            <Trigger Property="SelectedDate" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyleComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content Presenter -->
                                    <ContentPresenter Grid.Column="0"
                                                  x:Name="PART_ContentPresenter"
                                                  Margin="{TemplateBinding Padding}"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  HorizontalAlignment="Left"
                                                  IsHitTestVisible="False"/>

                                    <ToggleButton Grid.Column="1"
                                              x:Name="PART_DropDownToggle"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Width="20"
                                              Height="20"
                                              Margin="0,0,8,0"
                                              VerticalAlignment="Center"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press">
                                        <Path Fill="Gray"
                                          Data="M7,10L12,15L17,10H7Z"
                                          Stretch="Uniform"
                                          Width="10"
                                          Height="8"/>
                                    </ToggleButton>

                                    <!-- Popup -->
                                    <Popup x:Name="PART_Popup"
                                       Grid.ColumnSpan="2"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding ElementName=Border}"
                                       StaysOpen="False">
                                        <Border Background="White"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            MinWidth="{Binding ActualWidth, ElementName=Border}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                            <!-- Focus effect -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="35,20,35,30">
            <StackPanel Margin="-20,20,0,0">
                <TextBlock Text="Assign New Service"
                   FontSize="30" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- Row 1: Item Name, Category, Price -->
                <Grid Margin="200,40,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Employee ID Column -->
                    <Label Content="Employee ID" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbItemID" Grid.Row="1" Grid.Column="0" Height="47" FontSize="16" 
                              SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}"
                              SelectionChanged="cmbItemID_SelectionChanged">
                        <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Employee ID</ComboBoxItem>
                    </ComboBox>
                    <TextBlock x:Name="cmbItemIDError" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>

                    <!-- Barber Nickname Column -->
                    <Label Content="Barber Nickname" FontSize="20" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtBarberNickname" FontSize="30" Grid.Row="1" Grid.Column="2" Height="47" IsReadOnly="True"/>
                    <TextBlock x:Name="txtBarberNicknameError" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="2" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>
                </Grid>

                <!-- Row 2: Service and Price -->
                <Grid Margin="200,-10,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Service Column -->
                    <Label Content="Service" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbService" Grid.Row="1" Grid.Column="0" Height="47" FontSize="16" 
                    SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}">
                        <ComboBoxItem>Haircut</ComboBoxItem>
                        <ComboBoxItem>Haircut (Reservation)</ComboBoxItem>
                        <ComboBoxItem>Haircut/Wash</ComboBoxItem>
                        <ComboBoxItem>Haircut/Hot Towel</ComboBoxItem>
                        <ComboBoxItem>Haircut/Hair Dye</ComboBoxItem>
                        <ComboBoxItem>Haircut/Hair Color</ComboBoxItem>
                        <ComboBoxItem>Haircut/Highlights</ComboBoxItem>
                        <ComboBoxItem>Haircut/Bleaching</ComboBoxItem>
                        <ComboBoxItem>Haircut/Perm</ComboBoxItem>
                        <ComboBoxItem>Rebond/Short Hair</ComboBoxItem>
                        <ComboBoxItem>Rebond/Long Hair</ComboBoxItem>
                        <ComboBoxItem>Braid</ComboBoxItem>
                        <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Service</ComboBoxItem>
                    </ComboBox>
                    <TextBlock x:Name="cmbServiceError" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>
                    <TextBlock x:Name="cmbServiceSame" Foreground="Red" FontSize="12" 
                               Grid.Row="2" Grid.Column="0" Margin="0,2,0,0"
                               VerticalAlignment="Top" Visibility="Collapsed"/>

                    <!-- Price Column -->
                    <Label Content="Price" FontSize="20" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <Grid Grid.Row="1" Grid.Column="2">
                        <TextBox x:Name="txtPrice"
                            FontSize="30" 
                            Height="47"
                            Padding="30,0,10,0"
                            VerticalContentAlignment="Center"
                            BorderBrush="Gray"
                            BorderThickness="1"/>
                        <TextBlock Text="₱" 
                            FontSize="30"
                            Foreground="Black"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            IsHitTestVisible="False"/>
                    </Grid>
                    <TextBlock x:Name="txtPriceError" Foreground="Red" FontSize="12" 
                    Grid.Row="2" Grid.Column="2" Margin="0,2,0,0"
                    VerticalAlignment="Top" Visibility="Collapsed"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="190,-10,0,0">

                    <Button Content="Cancel" Cursor="Hand"
Width="205"
Height="40"
Margin="0,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="black" 
            CornerRadius="20" 
            BorderBrush="Black" 
            BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Save" Cursor="Hand" Click="Save_Click"
Width="205"
Height="40"
Margin="50,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="blue" 
            CornerRadius="20" 
            BorderBrush="blue" 
            BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>


        </Border>

        <!-- Gray Overlay for Modal Effect -->
        <Border x:Name="ModalOverlay"
     Grid.RowSpan="3"
     Background="#80000000"
     Visibility="Collapsed"
     IsHitTestVisible="True"/>

    </Grid>
</Window>