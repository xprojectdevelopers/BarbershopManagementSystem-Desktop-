<Window x:Class="Capstone.AppointmentOptions.Appointment_Records"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d" 
        Title="PayrollHistory" Height="1300" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanResize" 
        Background="White">

    <Window.Resources>

        <Style x:Key="TextBoxStyleDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Name="Border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TextBox part -->
                                    <DatePickerTextBox Grid.Column="0" 
                                       x:Name="PART_TextBox"
                                       Margin="{TemplateBinding Padding}"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="0"
                               x:Name="PlaceholderText"
                               Text="{TemplateBinding Tag}"
                               Foreground="Gray"
                               FontSize="{TemplateBinding FontSize}"
                               Margin="{TemplateBinding Padding}"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Collapsed"/>

                                    <!-- Calendar button -->
                                    <Button Grid.Column="1" 
                            x:Name="PART_Button"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center">
                                        <!-- Calendar icon -->
                                        <Path Fill="Gray" 
                              Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                              Stretch="Uniform"
                              Width="12"
                              Height="12"/>
                                    </Button>

                                    <!-- Popup for calendar -->
                                    <Popup Grid.Column="0" Grid.ColumnSpan="2"
                           x:Name="PART_Popup"
                           PlacementTarget="{Binding ElementName=Border}"
                           Placement="Bottom"
                           StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show placeholder when no date selected -->
                            <Trigger Property="SelectedDate" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyleComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content Presenter -->
                                    <ContentPresenter Grid.Column="0"
                                                      x:Name="PART_ContentPresenter"
                                                      Margin="{TemplateBinding Padding}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      HorizontalAlignment="Left"
                                                      IsHitTestVisible="False"/>

                                    <ToggleButton Grid.Column="1"
                                                  x:Name="PART_DropDownToggle"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Width="20"
                                                  Height="20"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <Path Fill="Gray"
                                              Data="M7,10L12,15L17,10H7Z"
                                              Stretch="Uniform"
                                              Width="10"
                                              Height="8"/>
                                    </ToggleButton>

                                    <!-- Popup -->
                                    <Popup x:Name="PART_Popup"
                                           Grid.ColumnSpan="2"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           Placement="Bottom"
                                           PlacementTarget="{Binding ElementName=Border}"
                                           StaysOpen="False">
                                        <Border Background="White"
                                                BorderBrush="Gray"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                MinWidth="{Binding ActualWidth, ElementName=Border}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                            <!-- Focus effect -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Responsive button style for notification and settings -->
        <Style x:Key="ResponsiveButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
        BorderBrush="{TemplateBinding BorderBrush}"
        BorderThickness="{TemplateBinding BorderThickness}"
        Padding="{TemplateBinding Padding}"
        CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple icon style for top bar (no converter needed) -->
        <Style x:Key="TopBarIcon" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Scroll container for entire content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      PanningMode="VerticalOnly">
            <StackPanel Margin="40">

                <!-- Header Section -->
                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Home - on the left side -->
                    <!-- Back - on the left side -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
        MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="0,0,15,0">
                        <Image Source="/Icon/arrow-left.png" Width="30" Height="30"/>
                        <Label Content="Back" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Empty space in middle -->
                    <StackPanel Grid.Column="1"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        

                        <!-- Settings Icon -->
                        <Button  
        Margin="1095,0,0,0" 
        Style="{StaticResource ResponsiveButton}"
        ToolTip="Settings" Grid.ColumnSpan="3" HorizontalAlignment="Left" Click="Setting_Click">
                            <Image Source="/Icon/gear.png" Style="{StaticResource TopBarIcon}"/>
                        </Button>
                    </Grid>
                </Grid>

                <!-- Page Title -->
                <Label Content="Appointment Records" FontSize="20" FontWeight="Bold" Margin="20,20,20,15"/>

                <Grid Margin="15,-20,15,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- New Employee Card -->
                    <Border Grid.Column="0" BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Appointment Tracker" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="Monitor and manage all customer appointments efficiently."
        FontSize="14" Foreground="Gray" Margin="0,5,0,15" TextWrapping="Wrap"/>
                                <Button Content="Update"
     Padding="10,5" Click="AppointmentUpdate_Click"
     Background="Blue" Foreground="White"
     FontWeight="Bold" Width="140" Height="40"
     HorizontalAlignment="Left"
     Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                            <Image Grid.Column="1" 
Source="/AppointmentOptions/Robot_On_Laptop_Computer.png" 
Width="120" 
Height="120" 
Stretch="Fill"
VerticalAlignment="Center"
HorizontalAlignment="Left"
Margin="10,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Total Employees Card -->
                    <Border Grid.Column="1" BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Dynamic employee count -->
                            <TextBlock x:Name="TotalApprovedText" Text="0" Margin="20,0,0,0" FontSize="64" FontWeight="Bold"/>
                            <TextBlock Text="Approved" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Absentees Card -->
                    <Border Grid.Column="2" BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="TotalOngoingText" Text="0" Margin="20,0,0,0" FontSize="64" FontWeight="Bold"/>
                            <TextBlock Text="Ongoing" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Filter and Action Section -->
                <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="20,-15,20,20">
                    <StackPanel>
                        <!-- Filters and Buttons Row -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 1: Item Name, Category, Price -->
                            <Grid Margin="150,0,40,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="205"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Content="Appointment Status" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                                <ComboBox x:Name="StatusComboBox"
                                      Grid.Row="1" 
                                      Grid.Column="0" 
                                      Height="47" 
                                      FontSize="16" 
                                      SelectedIndex="0" 
                                      Style="{StaticResource TextBoxStyleComboBox}">
                                    <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">All Status</ComboBoxItem>
                                    <ComboBoxItem>Approved</ComboBoxItem>
                                    <ComboBoxItem>On Going</ComboBoxItem>
                                    <ComboBoxItem>Completed</ComboBoxItem>
                                    <ComboBoxItem>Cancelled</ComboBoxItem>
                                    <ComboBoxItem>Declined</ComboBoxItem>
                                    <ComboBoxItem>No Show</ComboBoxItem>
                                </ComboBox>

                                <!-- & Symbol -->
                                <TextBlock Text="&amp;" 
                                           Grid.Row="1" 
                                           Grid.Column="1" 
                                           FontSize="24" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"
                                           Margin="15,0,15,0"/>

                                <Label Content="Assigned Barber" FontSize="20" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                                <ComboBox x:Name="BarberComboBox"
                                          Grid.Row="1" 
                                          Grid.Column="2" 
                                          Height="47" 
                                          FontSize="16" 
                                          SelectedIndex="0" 
                                          Style="{StaticResource TextBoxStyleComboBox}">
                                    <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">All Barber</ComboBoxItem>
                                </ComboBox>

                                <!-- Sort Button -->
                                <Button Grid.Column="4" 
                                        Grid.Row="1" 
                                        Content="Sort by" 
                                        Cursor="Hand"
                                        Height="47"
                                        VerticalAlignment="Center"
                                        Foreground="white"
                                        Click="SortButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="black" 
                                                CornerRadius="20" 
                                                BorderBrush="Black" 
                                                BorderThickness="1">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"
                                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid x:Name="AppointmentDataGrid" AutoGenerateColumns="False"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          HeadersVisibility="Column"
                          RowHeight="35" FontSize="14"
                          BorderBrush="#DDD" BorderThickness="1"
                          GridLinesVisibility="All">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding AppointmentDate}" Width="*"/>
                                <DataGridTextColumn Header="Time" Binding="{Binding AppointmentTime}" Width="*"/>
                                <DataGridTextColumn Header="Customer Name" Binding="{Binding CustomerName}" Width="*"/>
                                <DataGridTextColumn Header="Contact Number" Binding="{Binding ContactNumber}" Width="*"/>
                                <DataGridTextColumn Header="Assign Barber" Binding="{Binding BarberAssigned}" Width="*"/>
                                <!-- Updated Appointment Status column with color -->
                                <DataGridTextColumn Header="Appointment Status" Binding="{Binding AppointmentStatus}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding AppointmentStatus}" Value="On Going">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding AppointmentStatus}" Value="Approved">
                                                    <Setter Property="Foreground" Value="Blue"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding AppointmentStatus}" Value="Declined">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding AppointmentStatus}" Value="Cancelled">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding AppointmentStatus}" Value="No Show">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding AppointmentStatus}" Value="Completed">
                                                    <Setter Property="Foreground" Value="Green"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination Controls -->
                        <StackPanel x:Name="PaginationPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Gray Overlay for Modal Effect -->
        <Border x:Name="ModalOverlay"
Grid.RowSpan="3"
Background="#80000000"
Visibility="Collapsed"
IsHitTestVisible="True"
MouseLeftButtonDown="ModalOverlay_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>