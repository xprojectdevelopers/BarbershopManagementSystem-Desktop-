<Window x:Class="Capstone.AppointmentOptions.ViewReceipt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone.AppointmentOptions"
        mc:Ignorable="d"
        Title="ViewReceipt" Height="450" Width="432"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        ResizeMode="NoResize">
    <Grid Background="White" HorizontalAlignment="Left" Width="434">
        <!-- Receipt Container -->
        <Border Width="400" Height="400" 
                BorderBrush="Black" 
                BorderThickness="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Header -->
                <TextBlock Text="MOLAVE STREET BARBERS" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBlock Text="112 Upper Molave Street Payatas B." 
                           FontSize="12" 
                           HorizontalAlignment="Center"/>

                <TextBlock Text="1119 Quezon City, Philippines" 
                           FontSize="12" 
                           HorizontalAlignment="Center"/>

                <TextBlock Text="09091223456" 
                           FontSize="12" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Appointment Details -->
                <TextBlock Text="Appointment Number:" 
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBlock x:Name="txtAppointmentNumber"
                           Text="MSB-0000" 
                           FontSize="14" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Date and Time:" 
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBlock x:Name="txtDateTime"
                           Text="1/1/2025 (1:00 AM)" 
                           FontSize="14" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Payment Status:" 
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBlock x:Name="txtPaymentStatus"
                           Text="Status" 
                           FontSize="14" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Back Button -->
                <Button Content="Back" 
                        Width="250" 
                        Height="50"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="Black"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="25"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#333333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>