<Window x:Class="Capstone.AppointmentOptions.Appointments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        xmlns:custom="clr-namespace:Capstone.CustomControls"
        mc:Ignorable="d"
        Title="Inventory" Height="700" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="White">

    <Window.Resources>
        <!-- Responsive button style for notification and settings -->
        <Style x:Key="ResponsiveButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}"
                        CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Simple icon style for top bar (no converter needed) -->
        <Style x:Key="TopBarIcon" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header Section -->
            <RowDefinition Height="Auto"/>
            <!-- UniformGrid Section -->
            <RowDefinition Height="*"/>
            <!-- DataGrid Section -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="40,40,40,0" Width="1205">
            <Grid Margin="20,0,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Home - on the left side -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
                            MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="0,0,15,0">
                    <Image Source="/Icon/house.png" Width="30" Height="30"/>
                    <Label Content="Home" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Empty space in middle -->
                <StackPanel Grid.Column="1"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Notification Icon -->
                    <Button 
                    Margin="1060,0,0,0" 
                    Style="{StaticResource ResponsiveButton}"
                    ToolTip="Notifications"
                    Click="Notification_Click" Grid.ColumnSpan="3" HorizontalAlignment="Left">
                        <Image Source="/Icon/bell.png" Style="{StaticResource TopBarIcon}"/>
                    </Button>

                    <!-- Settings Icon -->
                    <Button  
                        Margin="1095,0,0,0" 
                        Style="{StaticResource ResponsiveButton}"
                        ToolTip="Settings" Grid.ColumnSpan="3" HorizontalAlignment="Left" Click="Setting_Click">
                        <Image Source="/Icon/gear.png" Style="{StaticResource TopBarIcon}"/>
                    </Button>
                </Grid>
            </Grid>

            <!-- Page Title -->
            <Label Content="Appointments" FontSize="20" FontWeight="Bold" Margin="20,20,20,15"/>
        </StackPanel>

        <!-- UniformGrid Section -->
        <UniformGrid Grid.Row="1" Columns="3" Rows="1" Margin="55,-20,55,20" Height="200">
            <!-- Employees Profile -->
            <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Icon/Book_Appointment.png" Stretch="Uniform" Width="120" Height="100"/>
                    <Button Content="Book Appoinment"
                            Background="Blue" Foreground="White"
                            FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0" Click="Book_Click"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Payroll History -->
            <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Icon/Appointment_Records.png" Stretch="Uniform" Width="120" Height="100"/>
                    <Button Content="Appoinment Records"
                            Background="Black" Foreground="White" Click="Record_Click"
                            FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                             Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>


            <!-- Attendance Report -->
            <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Icon/Manage_Service.png" Stretch="Uniform" Width="120" Height="100"/>
                    <Button Content="Manage Service" Click="Service_Click"
                            Background="Black" Foreground="White"
                            FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                             Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- DataGrid Section -->
        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="55,-10,55,30">
            <StackPanel>
                <TextBlock Text="Appoinment Request"
                           FontSize="20" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Button Content="Refresh"
Background="Black" Foreground="White"
FontWeight="Bold"
Cursor="Hand" Margin="970,-50,10,90" Grid.Row="2" Height="38" Width="140">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <DataGrid x:Name="EmployeeGrid" AutoGenerateColumns="False"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          HeadersVisibility="Column"
                          RowHeight="35" FontSize="14"
                          BorderBrush="#DDD" BorderThickness="1"
                          GridLinesVisibility="All" Margin="0,-60,0,0">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Black"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Appointment Number" Binding="{Binding EmployeeID}" Width="*"/>
                        <DataGridTextColumn Header="Customer Badge" Binding="{Binding EmployeeName}" Width="*"/>
                        <DataGridTextColumn Header="Customer Name" Binding="{Binding EmployeeRole}" Width="*"/>
                        <DataGridTextColumn Header="Contact Number" Binding="{Binding ContactNumber}" Width="*"/>
                        <DataGridTextColumn Header="Assigned Barber" Binding="{Binding EmergencyContactDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Service" Binding="{Binding EmergencyContactDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding EmergencyContactDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Time" Binding="{Binding EmergencyContactDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding EmergencyContactDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Payment Method" Binding="{Binding EmergencyContactDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Action" Binding="{Binding EmergencyContactDisplay}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination Controls -->
                <StackPanel x:Name="PaginationPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Gray Overlay for Modal Effect -->
        <Border x:Name="ModalOverlay"
        Grid.RowSpan="3"
        Background="#80000000"
        Visibility="Collapsed"
        IsHitTestVisible="True"
        MouseLeftButtonDown="ModalOverlay_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>