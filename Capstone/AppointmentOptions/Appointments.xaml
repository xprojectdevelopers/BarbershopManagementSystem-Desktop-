<Window x:Class="Capstone.AppointmentOptions.Appointments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="Appointments" Height="700" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="White">

    <Window.Resources>
        <!-- Responsive button style for notification and settings -->
        <Style x:Key="ResponsiveButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple icon style for top bar -->
        <Style x:Key="TopBarIcon" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="40,40,40,0" Width="1205">
            <Grid Margin="20,0,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Home -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
                            MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="0,0,15,0">
                    <Image Source="/Icon/house.png" Width="30" Height="30"/>
                    <Label Content="Home" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1"/>

                <!-- Notification Icon -->
                <Button Grid.Column="2"
                        Style="{StaticResource ResponsiveButton}"
                        ToolTip="Notifications"
                        Click="Notification_Click"
                        Margin="0,0,15,0">
                    <Image Source="/Icon/bell.png" Style="{StaticResource TopBarIcon}"/>
                </Button>

                <!-- Settings Icon -->
                <Button Grid.Column="3"
                        Style="{StaticResource ResponsiveButton}"
                        ToolTip="Settings"
                        Click="Setting_Click">
                    <Image Source="/Icon/gear.png" Style="{StaticResource TopBarIcon}"/>
                </Button>
            </Grid>

            <Label Content="Appointments" FontSize="20" FontWeight="Bold" Margin="20,20,20,15"/>
        </StackPanel>

        <!-- Cards Section -->
        <UniformGrid Grid.Row="1" Columns="3" Rows="1" Margin="55,-20,55,20" Height="200">
            <!-- Book Appointment Card -->
            <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Icon/Book_Appointment.png" Stretch="Uniform" Width="120" Height="100"/>
                    <Button Content="Book Appointment"
                            Background="Blue" Foreground="White"
                            FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                            Cursor="Hand" Click="Book_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Appointment Records Card -->
            <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Icon/Appointment_Records.png" Stretch="Uniform" Width="120" Height="100"/>
                    <Button Content="Appointment Records"
                            Background="Black" Foreground="White"
                            FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                            Cursor="Hand" Click="Record_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Manage Service Card -->
            <Border BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Icon/Manage_Service.png" Stretch="Uniform" Width="120" Height="100"/>
                    <Button Content="Manage Service"
                            Background="Black" Foreground="White"
                            FontWeight="Bold" Height="40" Width="160" Margin="0,10,0,0"
                            Cursor="Hand" Click="Service_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- DataGrid Section -->
        <Border x:Name="DataGridContainer" Grid.Row="2" BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="55,-10,55,30">
            <StackPanel>
                <!-- Header with Title, Refresh, and Test Notification -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Appointment Request"
                               FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>

                    <!-- Buttons on the right -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                        <!-- Refresh Button -->
                        <Button Content="Refresh"
                                Background="Black" Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand" Height="38" Width="140"
                                Click="Refresh_Click" Margin="0,0,10,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Test Notification Button -->
                        <Button Content="Test Notification"
                                Background="DarkOrange" Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand" Height="38" Width="180"
                                Click="TestNotificationButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Appointments DataGrid -->
                <DataGrid x:Name="AppointmentsGrid" AutoGenerateColumns="False"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          HeadersVisibility="Column"
                          RowHeight="35" FontSize="14"
                          BorderBrush="#DDD" BorderThickness="1"
                          GridLinesVisibility="All">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Black"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Appointment Number" Binding="{Binding ReceiptCode}" Width="*"/>
                        <DataGridTextColumn Header="Customer Badge" Binding="{Binding CustomerBadge}" Width="*"/>
                        <DataGridTextColumn Header="Customer Name" Binding="{Binding CustomerName}" Width="*"/>
                        <DataGridTextColumn Header="Contact Number" Binding="{Binding ContactNumber}" Width="*"/>
                        <DataGridTextColumn Header="Assigned Barber" Binding="{Binding Barber}" Width="*"/>
                        <DataGridTextColumn Header="Service" Binding="{Binding Service}" Width="*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat='MM/dd/yyyy'}" Width="*"/>
                        <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="*"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat='₱{0:F2}'}" Width="*"/>
                        <DataGridTextColumn Header="Payment Method" Binding="{Binding PaymentMethod}" Width="*"/>

                        <!-- Action Buttons -->
                        <DataGridTemplateColumn Header="Action" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="❌"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Width="32" Height="32"
                                                Margin="0,0,8,0"
                                                Click="RejectAppointment_Click"
                                                ToolTip="Reject Appointment"
                                                FontSize="14"/>
                                        <Button Content="✅"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Width="32" Height="32"
                                                Click="ApproveAppointment_Click"
                                                ToolTip="Approve Appointment"
                                                FontSize="14"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination Controls -->
                <StackPanel x:Name="PaginationPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Gray Overlay for Modal Effect -->
        <Border x:Name="ModalOverlay"
                Grid.RowSpan="3"
                Background="#80000000"
                Visibility="Collapsed"
                IsHitTestVisible="True"
                MouseLeftButtonDown="ModalOverlay_Click"/>
    </Grid>
</Window>
