<Window x:Class="Capstone.AppointmentOptions.AppointmentTracker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone.AppointmentOptions"
        mc:Ignorable="d"
        Title="AppointmentTracker"         
        Height="650" 
        Width="890" 
        MinWidth="400"
        MinHeight="400"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="None">

    <Window.Resources>

        <Style x:Key="TextBoxStyleDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <DatePickerTextBox Grid.Column="0" 
                                                       x:Name="PART_TextBox"
                                                       Margin="{TemplateBinding Padding}"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       FontSize="{TemplateBinding FontSize}"
                                                       VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="0"
                                               x:Name="PlaceholderText"
                                               Text="{TemplateBinding Tag}"
                                               Foreground="Gray"
                                               FontSize="{TemplateBinding FontSize}"
                                               Margin="{TemplateBinding Padding}"
                                               VerticalAlignment="Center"
                                               IsHitTestVisible="False"
                                               Visibility="Collapsed"/>

                                    <Button Grid.Column="1" 
                                            x:Name="PART_Button"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="20"
                                            Height="20"
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center">
                                        <Path Fill="Gray" 
                                              Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                                              Stretch="Uniform"
                                              Width="12"
                                              Height="12"/>
                                    </Button>

                                    <Popup Grid.Column="0" Grid.ColumnSpan="2"
                                           x:Name="PART_Popup"
                                           PlacementTarget="{Binding ElementName=Border}"
                                           Placement="Bottom"
                                           StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="SelectedDate" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyleComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter Grid.Column="0"
                                                      x:Name="PART_ContentPresenter"
                                                      Margin="{TemplateBinding Padding}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      HorizontalAlignment="Left"
                                                      IsHitTestVisible="False"/>

                                    <ToggleButton Grid.Column="1"
                                                  x:Name="PART_DropDownToggle"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Width="20"
                                                  Height="20"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <Path Fill="Gray"
                                              Data="M7,10L12,15L17,10H7Z"
                                              Stretch="Uniform"
                                              Width="10"
                                              Height="8"/>
                                    </ToggleButton>

                                    <Popup x:Name="PART_Popup"
                                           Grid.ColumnSpan="2"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           Placement="Bottom"
                                           PlacementTarget="{Binding ElementName=Border}"
                                           StaysOpen="False">
                                        <Border Background="White"
                                                BorderBrush="Gray"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                MinWidth="{Binding ActualWidth, ElementName=Border}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ResponsiveButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopBarIcon" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="28,20,27,27">
            <StackPanel Margin="-30">
                <TextBlock Text="Appointment Tracker"
                           FontSize="30" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,20,0,20"/>

                <!-- Search Section -->
                <Grid Margin="280,0,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Appointment Number" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,0">
                        <TextBox x:Name="txtItemID" FontSize="30" Width="205" Height="47" VerticalAlignment="Top"/>
                        <Button Content="Search" Cursor="Hand"
                                Width="160" Height="47" 
                                Margin="20,0,0,0"
                                VerticalAlignment="Top" 
                                Grid.Row="1"
                                Foreground="white">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="black" 
                                            CornerRadius="20" 
                                            BorderBrush="White" 
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                            <Image Source="/Icon/magnifying-glass.png" 
                                                   Width="20" 
                                                   Height="20" 
                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Search" 
                                                       Foreground="{TemplateBinding Foreground}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Row 1: Customer Name, Barber Assigned, Service -->
                <Grid Margin="80,-20,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Customer Name" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtItemName" FontSize="30" Grid.Row="1" Grid.Column="0" Height="47"/>

                    <Label Content="Barber Assigned" FontSize="20" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <Grid Grid.Row="1" Grid.Column="2">
                        <TextBox x:Name="txtPrice" 
                                 FontSize="30" 
                                 Height="47"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="Gray"
                                 BorderThickness="1"/>
                    </Grid>

                    <Label Content="Service" FontSize="20" Grid.Row="0" Grid.Column="4" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox FontSize="30" Grid.Row="1" Grid.Column="4" Height="47"/>
                </Grid>

                <!-- Row 2: Date, Time, Payment Method -->
                <Grid Margin="80,-20,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Date" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox FontSize="30" Grid.Row="1" Grid.Column="0" Height="47"/>

                    <Label Content="Time" FontSize="20" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox FontSize="30" Grid.Row="1" Grid.Column="2" Height="47"/>

                    <Label Content="Payment Method" FontSize="20" Grid.Row="0" Grid.Column="4" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBox FontSize="30" Grid.Row="1" Grid.Column="4" Height="47"/>
                </Grid>

                <!-- Row 3: Total, Appointment Status, Payment Status -->
                <Grid Margin="80,0,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Total" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <TextBox FontSize="30" 
                                 Height="47"
                                 Padding="30,0,10,0"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="Gray"
                                 BorderThickness="1"/>
                        <TextBlock Text="₱" 
                                   FontSize="30"
                                   Foreground="Black"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   IsHitTestVisible="False"/>
                    </Grid>

                    <Label Content="Appointment Status" FontSize="20" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <ComboBox Grid.Row="1" Grid.Column="2" Height="47" FontSize="16" 
                              SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}">
                        <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Appointment Status</ComboBoxItem>
                        <ComboBoxItem>Confirmed</ComboBoxItem>
                        <ComboBoxItem>Pending</ComboBoxItem>
                        <ComboBoxItem>Cancelled</ComboBoxItem>
                    </ComboBox>

                    <Label Content="Payment Status" FontSize="20" Grid.Row="0" Grid.Column="4" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <ComboBox Grid.Row="1" Grid.Column="4" Height="47" FontSize="16" 
                              SelectedIndex="-1" Style="{StaticResource TextBoxStyleComboBox}">
                        <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">Select Payment Status</ComboBoxItem>
                        <ComboBoxItem>Paid</ComboBoxItem>
                        <ComboBoxItem>Unpaid</ComboBoxItem>
                        <ComboBoxItem>Partial</ComboBoxItem>
                    </ComboBox>
                </Grid>

                <!-- Buttons Section -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button Content="Clear" Cursor="Hand"
                            Width="205"
                            Height="40"
                            Margin="0,0,20,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Foreground="white">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="black" 
                                        CornerRadius="20" 
                                        BorderBrush="Black" 
                                        BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding Content}"
                                                   Foreground="{TemplateBinding Foreground}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Update" Cursor="Hand"
                            Width="205"
                            Height="40"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Foreground="white">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="blue" 
                                        CornerRadius="20" 
                                        BorderBrush="Blue" 
                                        BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding Content}"
                                                   Foreground="{TemplateBinding Foreground}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>