<Window x:Class="Capstone.AppointmentOptions.DeleteAppointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone.AppointmentOptions"
        mc:Ignorable="d"
        Title="DeleteAppointment" Height="490" Width="500" WindowStyle="None" WindowStartupLocation="CenterScreen">

    <Grid>


        <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="20,29,20,25">
            <Label Content="Are you sure want to" FontSize="20" Margin="95,209,-21,61" FontWeight="Bold"/>

        </Border>
        <Image HorizontalAlignment="Left" Height="170" Margin="160,79,0,0" VerticalAlignment="Top" Width="200" Source="/Pop out image/marketing-target.png"/>
        <TextBlock HorizontalAlignment="Left" FontSize="20" Margin="90,292,0,0" TextWrapping="Wrap" Text="delete this appointment record?" VerticalAlignment="Top" FontWeight="Bold"/>

        <Button Content="Yes" Cursor="Hand"
Width="135"
Height="50"
Margin="90,339,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top"
Foreground="White" FontSize="20" FontWeight="Bold" Click="Yes_Click" >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Red" 
            CornerRadius="30" 
            BorderBrush="Black" 
            BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          RecognizesAccessKey="True"
                          TextBlock.Foreground="White"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="No" Cursor="Hand"
            Width="135"
            Height="50"
            Margin="265,339,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="White" FontSize="20" FontWeight="Bold" Click="No_Click" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="Black" 
                        CornerRadius="30" 
                        BorderBrush="Black" 
                        BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"
                            TextBlock.Foreground="White"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
