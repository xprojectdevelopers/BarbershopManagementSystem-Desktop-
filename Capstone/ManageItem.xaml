<Window x:Class="Capstone.ManageItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d" 
        Title="PayrollHistory" Height="700" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanResize" 
        Background="White">

    <Window.Resources>

        <Style x:Key="TextBoxStyleDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Name="Border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TextBox part -->
                                    <DatePickerTextBox Grid.Column="0" 
                                       x:Name="PART_TextBox"
                                       Margin="{TemplateBinding Padding}"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="0"
                               x:Name="PlaceholderText"
                               Text="{TemplateBinding Tag}"
                               Foreground="Gray"
                               FontSize="{TemplateBinding FontSize}"
                               Margin="{TemplateBinding Padding}"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Collapsed"/>

                                    <!-- Calendar button -->
                                    <Button Grid.Column="1" 
                            x:Name="PART_Button"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center">
                                        <!-- Calendar icon -->
                                        <Path Fill="Gray" 
                              Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                              Stretch="Uniform"
                              Width="12"
                              Height="12"/>
                                    </Button>

                                    <!-- Popup for calendar -->
                                    <Popup Grid.Column="0" Grid.ColumnSpan="2"
                           x:Name="PART_Popup"
                           PlacementTarget="{Binding ElementName=Border}"
                           Placement="Bottom"
                           StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show placeholder when no date selected -->
                            <Trigger Property="SelectedDate" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_TextBox" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyleComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content Presenter -->
                                    <ContentPresenter Grid.Column="0"
                                                      x:Name="PART_ContentPresenter"
                                                      Margin="{TemplateBinding Padding}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      HorizontalAlignment="Left"
                                                      IsHitTestVisible="False"/>

                                    <ToggleButton Grid.Column="1"
                                                  x:Name="PART_DropDownToggle"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Width="20"
                                                  Height="20"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <Path Fill="Gray"
                                              Data="M7,10L12,15L17,10H7Z"
                                              Stretch="Uniform"
                                              Width="10"
                                              Height="8"/>
                                    </ToggleButton>

                                    <!-- Popup -->
                                    <Popup x:Name="PART_Popup"
                                           Grid.ColumnSpan="2"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           Placement="Bottom"
                                           PlacementTarget="{Binding ElementName=Border}"
                                           StaysOpen="False">
                                        <Border Background="White"
                                                BorderBrush="Gray"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                MinWidth="{Binding ActualWidth, ElementName=Border}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                            <!-- Focus effect -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Scroll container for entire content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      PanningMode="VerticalOnly">
            <StackPanel Margin="40">

                <!-- Header Section -->
                <Grid Margin="20,30,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back - on the left side -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
                                MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="0,0,15,0">
                        <Image Source="/Icon/arrow-left.png" Width="30" Height="30"/>
                        <Label Content="Back" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Empty space in middle -->
                    <StackPanel Grid.Column="1"/>

                    <!-- Notification -->
                    <Image Source="/Icon/bell.png" Width="30" Height="30" Grid.Column="2" Margin="0,0,15,0" VerticalAlignment="Center"/>

                    <!-- Settings -->
                    <Image Source="/Icon/gear.png" Width="30" Height="30" Grid.Column="3" VerticalAlignment="Center"/>
                </Grid>

                <!-- Page Title -->
                <Label Content="Manage Item" FontSize="20" FontWeight="Bold" Margin="20,20,20,15"/>

                <!-- Top Cards -->
                <Grid Margin="15,-20,15,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- New Employee Card -->
                    <Border Grid.Column="0" BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Update Product" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="Update existing product details in Molave Streets Barbers."
           FontSize="14" Foreground="Gray" Margin="0,5,0,15" TextWrapping="Wrap"/>
                                <Button Content="Update"
        Padding="10,5"
        Background="Blue" Foreground="White"
        FontWeight="Bold" Width="140" Height="40"
        HorizontalAlignment="Left"
        Click="ProductUpdate_Click" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                            <Image Grid.Column="1" 
   Source="Icon/w.png" 
   Width="120" 
   Height="120" 
   Stretch="Fill"
   VerticalAlignment="Center"
   HorizontalAlignment="Right"
   Margin="10,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Total Employees Card -->
                    <Border Grid.Column="1" BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Dynamic employee count -->
                            <TextBlock x:Name="TotalEmployeesText" Text="0" Margin="28,0,0,0" FontSize="64" FontWeight="Bold"/>
                            <TextBlock Text="Total Register" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Products" FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Absentees Card -->
                    <Border Grid.Column="2" BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="TotalCashierText" Text="0" Margin="28,0,0,0" FontSize="64" FontWeight="Bold"/>
                            <TextBlock Text="Total All Stock" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Products" FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Filter and Action Section -->
                <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="20,-15,20,20">
                    <StackPanel>
                        <!-- Filters and Buttons Row -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Category Filter -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <Label Content="Category" FontSize="20" Margin="0,0,0,5"/>
                                <ComboBox x:Name="Gender" Width="190" Height="47" FontSize="16" SelectedIndex="-1"
                                          Style="{StaticResource TextBoxStyleComboBox}">
                                    <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">All Items</ComboBoxItem>
                                    <ComboBoxItem>Aftershaves</ComboBoxItem>
                                    <ComboBoxItem>Clays</ComboBoxItem>
                                    <ComboBoxItem>Clippers and trimmers</ComboBoxItem>
                                    <ComboBoxItem>Combs and brushes</ComboBoxItem>
                                    <ComboBoxItem>Conditioners</ComboBoxItem>
                                    <ComboBoxItem>Gel</ComboBoxItem>
                                    <ComboBoxItem>Hair dyes</ComboBoxItem>
                                    <ComboBoxItem>Hair sprays</ComboBoxItem>
                                    <ComboBoxItem>Pomades</ComboBoxItem>
                                    <ComboBoxItem>Razor and blades</ComboBoxItem>
                                    <ComboBoxItem>Scissors</ComboBoxItem>
                                    <ComboBoxItem>Shampoos</ComboBoxItem>
                                    <ComboBoxItem>Shavings creams</ComboBoxItem>
                                    <ComboBoxItem>Towels</ComboBoxItem>
                                    <ComboBoxItem>Waxes</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                            <!-- Sort Button -->
                            <Button Grid.Column="1" Content="Sort by" Cursor="Hand"
                                    Width="160"
                                    Height="40"
                                    Margin="0,45,0,0"
                                    VerticalAlignment="Top"
                                    Foreground="white" Click="Sort_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="black" 
                                                CornerRadius="20" 
                                                BorderBrush="Black" 
                                                BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"
                                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Add New Item Button -->
                            <Button Grid.Column="3" Content="Add New Item" Cursor="Hand"
                                    Width="160"
                                    Margin="0,45,0,4"
                                    Foreground="white"
                                    Click="AddItem_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="blue" 
                                                CornerRadius="20" 
                                                BorderBrush="blue" 
                                                BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"
                                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid x:Name="EmployeeGrid" AutoGenerateColumns="False"
          CanUserAddRows="False" CanUserDeleteRows="False"
          HeadersVisibility="Column"
          RowHeight="35" FontSize="14"
          BorderBrush="#DDD" BorderThickness="1"
          GridLinesVisibility="All">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Item ID" Binding="{Binding ItemID}" Width="*"/>
                                <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                                <DataGridTextColumn Header="Quantity In Stock" Binding="{Binding QuantityStock, TargetNullValue=''}" Width="*"/>
                                <!-- SIMPLE SOLUTION: Use CellTemplate instead -->
                                <DataGridTemplateColumn Header="Price" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding Price, StringFormat='₱ {0}'}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Price}" Value="">
                                                                <Setter Property="Text" Value=""/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Supplier" Binding="{Binding SupplierName}" Width="*"/>
                                <DataGridTextColumn Header="Last Update" Binding="{Binding Date}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination Controls -->
                        <StackPanel x:Name="PaginationPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Gray Overlay for Modal Effect -->
        <Border x:Name="ModalOverlay"
                Grid.RowSpan="3"
                Background="#80000000"
                Visibility="Collapsed"
                IsHitTestVisible="True"
                MouseLeftButtonDown="ModalOverlay_Click"/>
    </Grid>
</Window>