<Window x:Class="Capstone.ManageItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="PayrollHistory" Height="1300" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="White">
    
    <Window.Resources>
        <Style x:Key="TextBoxStyleComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content Presenter -->
                                    <ContentPresenter Grid.Column="0"
                                                      x:Name="PART_ContentPresenter"
                                                      Margin="{TemplateBinding Padding}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      HorizontalAlignment="Left"
                                                      IsHitTestVisible="False"/>

                                    <ToggleButton Grid.Column="1"
                                                  x:Name="PART_DropDownToggle"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Width="20"
                                                  Height="20"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <Path Fill="Gray"
                                              Data="M7,10L12,15L17,10H7Z"
                                              Stretch="Uniform"
                                              Width="10"
                                              Height="8"/>
                                    </ToggleButton>

                                    <!-- Popup -->
                                    <Popup x:Name="PART_Popup"
                                           Grid.ColumnSpan="2"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           Placement="Bottom"
                                           PlacementTarget="{Binding ElementName=Border}"
                                           StaysOpen="False">
                                        <Border Background="White"
                                                BorderBrush="Gray"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                MinWidth="{Binding ActualWidth, ElementName=Border}">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                            <!-- Focus effect -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Scroll container for entire content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      PanningMode="VerticalOnly">
            <StackPanel Margin="40">

                <!-- Header Section -->
                <Grid Margin="20,30,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back - on the left side -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
                                MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="0,0,15,0">
                        <Image Source="/Icon/arrow-left.png" Width="30" Height="30"/>
                        <Label Content="Back" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Empty space in middle -->
                    <StackPanel Grid.Column="1"/>

                    <!-- Notification -->
                    <Image Source="/Icon/bell.png" Width="30" Height="30" Grid.Column="2" Margin="0,0,15,0" VerticalAlignment="Center"/>

                    <!-- Settings -->
                    <Image Source="/Icon/gear.png" Width="30" Height="30" Grid.Column="3" VerticalAlignment="Center"/>
                </Grid>

                <!-- Page Title -->
                <Label Content="Manage Item" FontSize="20" FontWeight="Bold" Margin="20,20,20,15"/>

                <!-- Filter and Action Section -->
                <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="20,-15,20,20">
                    <StackPanel>
                        <!-- Filters and Buttons Row -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Category Filter -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <Label Content="Category" FontSize="20" Margin="0,0,0,5"/>
                                <ComboBox x:Name="Gender" Width="190" Height="47" FontSize="16" SelectedIndex="-1"
                                          Style="{StaticResource TextBoxStyleComboBox}">
                                    <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">All Items</ComboBoxItem>
                                    <ComboBoxItem>Male</ComboBoxItem>
                                    <ComboBoxItem>Female</ComboBoxItem>
                                    <ComboBoxItem>Prefer not to say</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                            <!-- Sort Button -->
                            <Button Grid.Column="1" Content="Sort by"
                                    Width="160"
                                    Height="40"
                                    Margin="0,45,0,0"
                                    VerticalAlignment="Top"
                                    Foreground="white">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="black" 
                                                CornerRadius="20" 
                                                BorderBrush="Black" 
                                                BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"
                                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Add New Item Button -->
                            <Button Grid.Column="3" Content="Add New Item"
                                    Width="160"
                                    Height="40"
                                    Margin="0,45,0,0"
                                    VerticalAlignment="Top"
                                    Foreground="white"
                                    Click="AddItem_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="blue" 
                                                CornerRadius="20" 
                                                BorderBrush="blue" 
                                                BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"
                                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid x:Name="EmployeeGrid" AutoGenerateColumns="False"
          CanUserAddRows="False" CanUserDeleteRows="False"
          HeadersVisibility="Column"
          RowHeight="35" FontSize="14"
          BorderBrush="#DDD" BorderThickness="1"
          GridLinesVisibility="All">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Item ID" Binding="{Binding ItemID}" Width="*"/>
                                <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                                <DataGridTextColumn Header="Quantity In Stock" Binding="{Binding QuantityStock, TargetNullValue=''}" Width="*"/>
                                <DataGridTextColumn Header="Price" Binding="{Binding Price, TargetNullValue=''}" Width="*"/>
                                <DataGridTextColumn Header="Supplier" Binding="{Binding SupplierName}" Width="*"/>
                                <DataGridTextColumn Header="Last Update" Binding="{Binding Date}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination Controls -->
                        <StackPanel x:Name="PaginationPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="0,20,0,60" Height="570" Width="1145">
                    <StackPanel Margin="-20,0,0,0">
                        <TextBlock Text="Item Description"
                   FontSize="30" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,20,0,20"/>
                        <!-- Header Section -->
                        <Grid Margin="40,70,40,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Home - on the left side -->
                            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="370,-50,20,0">
                                <Label Content="Item ID" FontSize="20" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                                <TextBox x:Name="txtEmployeeID" HorizontalAlignment="Left" FontSize="30" Margin="-75,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
                                <TextBlock x:Name="txtEmployeeIDError" Foreground="Red" FontSize="14" Margin="465,210,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
                                <Button Content="Search"
    Width="160"
    Height="40"
    Margin="20,37,0,0"
    HorizontalAlignment="Left"
    VerticalAlignment="Top" Grid.Row="1"
    Foreground="white">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="black" 
                CornerRadius="20" 
                BorderBrush="Black" 
                BorderThickness="1">
                                                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                                                    <Image Source="/Icon/magnifying-glass.png" 
                        Width="16" 
                        Height="16" 
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"/>
                                                    <TextBlock Text="{TemplateBinding Content}"
                        Foreground="{TemplateBinding Foreground}"
                        VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>

                            <!-- Empty space in middle -->
                            <StackPanel Grid.Column="1"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="200,-70,30,0" Width="1020">
                            <Label Content="Item Name " FontSize="20" HorizontalAlignment="Left" Margin="57,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <TextBox HorizontalAlignment="Left" FontSize="30" Margin="-114,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
                            <TextBlock x:Name="txtEmergencyNameError" Foreground="Red" FontSize="14" Margin="255,898,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

                            <Label Content="Category " FontSize="20" HorizontalAlignment="Left" Margin="45,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <ComboBox Margin="-96,117,0,0" Width="190" Height="47" FontSize="16" SelectedIndex="-1"
          Style="{StaticResource TextBoxStyleComboBox}">
                                <ComboBoxItem IsEnabled="False" IsSelected="True" Foreground="Gray">All Items</ComboBoxItem>
                                <ComboBoxItem>Male</ComboBoxItem>
                                <ComboBoxItem>Female</ComboBoxItem>
                                <ComboBoxItem>Prefer not to say</ComboBoxItem>
                            </ComboBox>
                            <TextBlock x:Name="txtEmergencyNumberError" Foreground="Red" FontSize="14" Margin="620,898,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

                            <Label Content="Price " FontSize="20" HorizontalAlignment="Left" Margin="35,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <TextBox HorizontalAlignment="Left" FontSize="30" Margin="-58,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
                            <TextBlock Foreground="Red" FontSize="14" Margin="620,898,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="300,-50,30,0" Width="1034">
                            <Label Content="Supplier Name" FontSize="20" HorizontalAlignment="Left" Margin="50,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <TextBox HorizontalAlignment="Left" FontSize="30" Margin="-141,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
                            <TextBlock Foreground="Red" FontSize="14" Margin="255,898,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>

                            <Label Content="Supplier Contact Number" FontSize="20" HorizontalAlignment="Left" Margin="68,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <TextBox HorizontalAlignment="Left" FontSize="30" Margin="-235,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
                            <TextBlock Foreground="Red" FontSize="14" Margin="620,898,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="350,-10,0,0">

                            <Button Content="Delete"
Width="205"
Height="40"
Margin="0,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="black" 
            CornerRadius="20" 
            BorderBrush="Black" 
            BorderThickness="1">
                                            <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                                <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="Update"
Width="205"
Height="40"
Margin="68,37,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top" Grid.Row="1"
Foreground="white">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="black" 
            CornerRadius="20" 
            BorderBrush="Black" 
            BorderThickness="1">
                                            <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                                                <TextBlock Text="{TemplateBinding Content}"
                    Foreground="{TemplateBinding Foreground}"
                    VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Gray Overlay for Modal Effect -->
        <Border x:Name="ModalOverlay"
        Grid.RowSpan="3"
        Background="#80000000"
        Visibility="Collapsed"
        IsHitTestVisible="True"
        MouseLeftButtonDown="ModalOverlay_Click"/>
        
    </Grid>
</Window>