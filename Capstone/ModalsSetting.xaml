<Window x:Class="Capstone.ModalsSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="ModalsNotification" Height="450" Width="270"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="None">

    <Window.Resources>
        <!-- Setting Item Style -->
        <Style x:Key="SettingItem" TargetType="Border">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Setting" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,30,0,30"
                   Grid.Row="0"/>

        <!-- Menu Items -->
        <StackPanel Grid.Row="1" 
                    Margin="30,0,30,30">

            <!-- My Profile -->
            <Border x:Name="MyProfileBorder" 
                    Style="{StaticResource SettingItem}"
                    MouseLeftButtonDown="MyProfile_Click">
                <StackPanel Orientation="Horizontal">
                    <Viewbox Width="20" Height="20" Margin="0,0,15,0">
                        <Canvas Width="24" Height="24">
                            <Ellipse Width="24" Height="24" Stroke="Black" StrokeThickness="2" Fill="Transparent"/>
                            <Ellipse Width="8" Height="8" Canvas.Left="8" Canvas.Top="6" Fill="Black"/>
                            <Path Data="M6,16 Q6,13 12,13 Q18,13 18,16" Stroke="Black" StrokeThickness="2" Fill="Transparent"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="My Profile" 
                               FontSize="15" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Border>

            <!-- Website Admin -->
            <Border x:Name="WebsiteAdminBorder" 
                    Style="{StaticResource SettingItem}"
                    MouseLeftButtonDown="WebsiteAdmin_Click">
                <StackPanel Orientation="Horizontal">
                    <Viewbox Width="20" Height="20" Margin="0,0,15,0">
                        <Canvas Width="24" Height="24">
                            <Rectangle Width="20" Height="14" Canvas.Left="2" Canvas.Top="5" Stroke="Black" StrokeThickness="2" Fill="Transparent"/>
                            <Line X1="2" Y1="8" X2="22" Y2="8" Stroke="Black" StrokeThickness="2"/>
                            <Rectangle Width="24" Height="3" Canvas.Left="0" Canvas.Top="19" Fill="Black"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Website Admin" 
                               FontSize="15" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Border>

            <!-- Mobile Admin -->
            <Border x:Name="MobileAdminBorder" 
                    Style="{StaticResource SettingItem}"
                    MouseLeftButtonDown="MobileAdmin_Click">
                <StackPanel Orientation="Horizontal">
                    <Viewbox Width="20" Height="20" Margin="0,0,15,0">
                        <Canvas Width="24" Height="24">
                            <Rectangle Width="14" Height="22" Canvas.Left="5" Canvas.Top="1" Stroke="Black" StrokeThickness="2" Fill="Transparent" RadiusX="2" RadiusY="2"/>
                            <Line X1="9" Y1="20" X2="15" Y2="20" Stroke="Black" StrokeThickness="2"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Mobile Admin" 
                               FontSize="15" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Border>

            <!-- Log Out -->
            <Border x:Name="LogOutBorder" 
                    Style="{StaticResource SettingItem}"
                    MouseLeftButtonDown="LogOut_Click">
                <StackPanel Orientation="Horizontal">
                    <Viewbox Width="20" Height="20" Margin="0,0,15,0">
                        <Canvas Width="24" Height="24">
                            <Path Data="M10,4 L10,20 M10,4 L4,4 L4,20 L10,20" Stroke="Black" StrokeThickness="2" Fill="Transparent"/>
                            <Path Data="M15,12 L20,12 M17,9 L20,12 L17,15" Stroke="Black" StrokeThickness="2" Fill="Transparent"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Log Out" 
                               FontSize="15" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Window>