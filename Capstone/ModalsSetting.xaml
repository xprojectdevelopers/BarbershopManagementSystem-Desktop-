<Window x:Class="Capstone.ModalsSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="ModalsNotification" Height="450" Width="270"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="None">

    <Window.Resources>
        <!-- Setting Item Style -->
        <Style x:Key="SettingItem" TargetType="Border">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Setting" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,30,0,30"
                   Grid.Row="0"/>

        <!-- Menu Items -->
        <StackPanel Grid.Row="1" 
                    Margin="30,0,30,30">

            <!-- My Profile -->
            <Border x:Name="MyProfileBorder" 
                    Style="{StaticResource SettingItem}"
                    MouseLeftButtonDown="MyProfile_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/user-circle.png" 
                           Width="25" 
                           Height="25" 
                           Margin="0,0,15,0"
                           Stretch="Uniform"/>
                    <TextBlock Text="My Profile" 
                               FontSize="15" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Border>

            <!-- Website Admin -->
            <Border x:Name="WebsiteAdminBorder" 
                    Style="{StaticResource SettingItem}"
                    MouseLeftButtonDown="WebsiteAdmin_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/monitor.png" 
                           Width="25" 
                           Height="25" 
                           Margin="0,0,15,0"
                           Stretch="Uniform"/>
                    <TextBlock Text="Website Admin" 
                               FontSize="15" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Border>

            <!-- Mobile Admin -->
            <Border x:Name="MobileAdminBorder" 
                    Style="{StaticResource SettingItem}"
                    MouseLeftButtonDown="MobileAdmin_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/device-mobile.png" 
                           Width="25" 
                           Height="25" 
                           Margin="0,0,15,0"
                           Stretch="Uniform"/>
                    <TextBlock Text="Mobile Admin" 
                               FontSize="15" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Border>

            <!-- Log Out -->
            <Border x:Name="LogOutBorder" 
                    Style="{StaticResource SettingItem}"
                    MouseLeftButtonDown="LogOut_Click">
                <StackPanel Orientation="Horizontal"> 
                    <Image Source="/sign-out.png" 
                           Width="25" 
                           Height="25" 
                           Margin="0,0,15,0"
                           Stretch="Uniform"/>
                    <TextBlock Text="Log Out" 
                               FontSize="15" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Window>