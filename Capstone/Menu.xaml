<Window x:Class="Capstone.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capstone"
        mc:Ignorable="d"
        Title="Dashboard" Height="700" Width="1200"
        WindowState="Maximized"
        MinWidth="400"
        MinHeight="400"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="MenuCard" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MenuIcon" TargetType="Image">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <Style x:Key="MenuTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="MenuSubtitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ProfileImage" TargetType="Border">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="CornerRadius" Value="60"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ResponsiveProfileName" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ResponsiveProfileRole" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ResponsiveProfileLink" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#0056FF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ResponsiveButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopBarIcon" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                      Margin="-5,39,5,21" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Height="60" VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        

                        <Button Margin="1045,0,0,0" 
                                Style="{StaticResource ResponsiveButton}"
                                ToolTip="Settings"  Cursor="Hand"
                                Grid.ColumnSpan="3" 
                                HorizontalAlignment="Left" 
                                Click="Setting_Click">
                            <Image Source="/Icon/gear.png" Style="{StaticResource TopBarIcon}"/>
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Viewbox Stretch="Uniform" MaxWidth="350" MaxHeight="300" StretchDirection="DownOnly">
                        <StackPanel Orientation="Vertical">
                            <Border x:Name="ProfileImageBorder" Width="120" Height="120" 
                                    CornerRadius="60"
                                    Background="LightGray" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,15"
                                    ClipToBounds="True">
                                <Image Source="/Icon/profile.png" 
                                       Stretch="UniformToFill"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            </Border>

                            <StackPanel>
                                <TextBlock Text="Name" x:Name="NameText"
                                          Style="{StaticResource ResponsiveProfileName}"/>
                                <TextBlock Text="Role" x:Name="RoleText"
                                          Style="{StaticResource ResponsiveProfileRole}"/>
                                <TextBlock Text="My Profile" 
                                          Style="{StaticResource ResponsiveProfileLink}"
                                          MouseLeftButtonUp="MyProfile_Click" Cursor="Hand"/>
                            </StackPanel>
                        </StackPanel>
                    </Viewbox>
                </Grid>

                <Grid Grid.Row="2" Margin="55,20,55,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border x:Name="AppointmentsCard" Grid.Row="0" Grid.Column="0" 
                            Style="{StaticResource MenuCard}" MouseLeftButtonDown="Appointments_Click">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Row="0" Grid.Column="0" Source="/Icon/bell-ringing.png" 
                                   Style="{StaticResource MenuIcon}" Margin="0,0,15,0"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center">
                                <TextBlock Text="Appointments" Style="{StaticResource MenuTitle}"/>
                                <TextBlock Text="Manage bookings, schedules, approvals." 
                                          Style="{StaticResource MenuSubtitle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border x:Name="CustomersCard" Grid.Row="0" Grid.Column="1" 
                            Style="{StaticResource MenuCard}" MouseLeftButtonDown="Customers_Click">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Row="0" Grid.Column="0" Source="/Icon/headset.png" 
                                   Style="{StaticResource MenuIcon}" Margin="0,0,15,0"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center">
                                <TextBlock Text="Customers" Style="{StaticResource MenuTitle}"/>
                                <TextBlock Text="Maintain client records and contact details." 
                                          Style="{StaticResource MenuSubtitle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border x:Name="EmployeesCard" Grid.Row="0" Grid.Column="2" 
                            Style="{StaticResource MenuCard}" MouseLeftButtonDown="Employees_Click">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Row="0" Grid.Column="0" Source="/Icon/folder-user.png" 
                                   Style="{StaticResource MenuIcon}" Margin="0,0,15,0"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center">
                                <TextBlock Text="Employees" Style="{StaticResource MenuTitle}"/>
                                <TextBlock Text="Team profiles, roles, permissions." 
                                          Style="{StaticResource MenuSubtitle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border x:Name="PayrollCard" Grid.Row="1" Grid.Column="0" 
                            Style="{StaticResource MenuCard}" MouseLeftButtonDown="Payroll_Click">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Row="0" Grid.Column="0" Source="/Icon/wallet.png" 
                                   Style="{StaticResource MenuIcon}" Margin="0,0,15,0"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center">
                                <TextBlock Text="Payroll" Style="{StaticResource MenuTitle}"/>
                                <TextBlock Text="Handle salaries and staff compensation." 
                                          Style="{StaticResource MenuSubtitle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border x:Name="InventoryCard" Grid.Row="1" Grid.Column="1" 
                            Style="{StaticResource MenuCard}" MouseLeftButtonDown="Inventory_Click">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Row="0" Grid.Column="0" Source="/Icon/bell-ringing.png" 
                                   Style="{StaticResource MenuIcon}" Margin="0,0,15,0"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center">
                                <TextBlock Text="Inventory" Style="{StaticResource MenuTitle}"/>
                                <TextBlock Text="Maintain stock records and control details." 
                                          Style="{StaticResource MenuSubtitle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <Border x:Name="ModalOverlay"
                Grid.RowSpan="2"
                Background="#80000000"
                Visibility="Collapsed"
                IsHitTestVisible="True"
                MouseLeftButtonDown="ModalOverlay_Click" 
                Grid.ColumnSpan="2"/>
    </Grid>
</Window>