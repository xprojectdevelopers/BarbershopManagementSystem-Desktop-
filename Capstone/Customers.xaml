<Window x:Class="Capstone.Customers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Customers"
        WindowState="Maximized"
        Background="White" Height="736">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40">

            <!-- 🔹 Header Section -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Home -->
                <StackPanel MouseLeftButtonUp="Home_Click" Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0"
                            Cursor="Hand" Margin="0,0,15,0">
                    <Image Source="/Icon/house.png" Width="30" Height="30"/>
                    <Label Content="Home" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Spacer -->
                <StackPanel Grid.Column="1"/>

                <!-- Notification -->
                <Image Source="/Icon/bell.png" Width="30" Height="30" Grid.Column="2" Margin="0,0,15,0" VerticalAlignment="Center"/>

                <!-- Settings -->
                <Image Source="/Icon/gear.png" Width="30" Height="30" Grid.Column="3" VerticalAlignment="Center"/>
            </Grid>

            <!-- 🔹 Page Title -->
            <Label Content="Customers" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- 🔹 Top Section: List Card + Two Stat Cards -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- List of Subscribes Card -->
                <Border Grid.Column="0" BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="20" Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="List of Subscribes" FontSize="24" FontWeight="Bold"/>
                            <TextBlock Text="Registered subscribers of Molave Street’s Barbers."
                                       FontSize="14" Foreground="Gray" Margin="0,5,0,15" TextWrapping="Wrap"/>
                            <Button Content="See All Subscribers"
                                    Padding="10,5"
                                    Background="#007BFF" Foreground="White"
                                    FontWeight="Bold" Width="170" Height="40"
                                    HorizontalAlignment="Left" Cursor="Hand"
                                    Click="SeeAllSubscribers_Click">
                                
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>

                        <Image Grid.Column="1"
                               Source="/Profile-2--Streamline-Milano-1.png"
                               Width="120" Height="120"
                               Stretch="Fill"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Total MLV ST Users -->
                <Border Grid.Column="1" BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="TotalUsersText" Text="0" FontSize="64" FontWeight="Bold"/>
                        <TextBlock Text="Total MLV ST. Users" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Total Subscribers -->
                <Border Grid.Column="2" BorderBrush="#000" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="TotalSubscribersText" Text="0" FontSize="64" FontWeight="Bold"/>
                        <TextBlock Text="Total Subscribers" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 🔹 Customers Quick Message Table -->
            <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="0,0,0,20" Height="299">
                <StackPanel>
                    <TextBlock Text="Customers Quick Message"
                               FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <DataGrid x:Name="CustomerGrid" AutoGenerateColumns="False"
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              RowHeight="35" FontSize="14"
                              BorderBrush="#DDD" BorderThickness="1"
                              GridLinesVisibility="All">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="3*"/>
                            <DataGridTextColumn Header="Phone Number" Binding="{Binding Phone}" Width="2*"/>
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="5*"/>
                            <DataGridTemplateColumn Header="Action" Width="1.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Width="30" Height="30"
                                            Cursor="Hand"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="ResolveMessage_Click">
                                            <Image Source="/Icon/CheckCircle.png" Width="20" Height="20" Cursor="Hand"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel x:Name="PaginationPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"/>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>
