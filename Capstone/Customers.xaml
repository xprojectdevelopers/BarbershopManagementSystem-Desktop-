<Window x:Class="Capstone.Customers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Customers"
        WindowState="Maximized"
        Background="White">

    <Window.Resources>
        <!-- Responsive button style for notification and settings -->
        <Style x:Key="ResponsiveButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             Padding="{TemplateBinding Padding}"
                             CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple icon style for top bar -->
        <Style x:Key="TopBarIcon" TargetType="Image">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <!-- Header Section -->
                <StackPanel Grid.Row="0" Margin="0,0,0,0" Width="1205">
                    <Grid Margin="20,0,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Home -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center"
                        MouseLeftButtonUp="Home_Click" Cursor="Hand" Margin="0,0,15,0">
                            <Image Source="/Icon/house.png" Width="30" Height="30"/>
                            <Label Content="Home" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>

                     
                        <StackPanel Grid.Column="1"/>
   <!-- Settings Icon -->
                        <Button Grid.Column="3" Cursor="Hand"
                    Style="{StaticResource ResponsiveButton}"
                    ToolTip="Settings"
                    Click="Setting_Click">
                            <Image Source="/Icon/gear.png" Style="{StaticResource TopBarIcon}"/>
                        </Button>
                    </Grid>

                    <Label Content="Customers" FontSize="20" FontWeight="Bold" Margin="20,20,20,15"/>
                </StackPanel>
                <!-- 🔹 Statistic Cards -->
                <Grid Margin="0,-20,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Unanswered -->
                    <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" CornerRadius="8" Margin="10"
                            Background="White" Padding="30">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="0" x:Name="txtMessage" FontSize="64" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Unanswered" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Quick Messages" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        </StackPanel>
                    </Border>

                    <!-- Total MLV ST. Users -->
                    <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" CornerRadius="8" Margin="10"
                            Background="White" Padding="30">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="0" x:Name="TotalUsersText" FontSize="64" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total MLV ST. Users" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="See more" Foreground="#0078FF" FontWeight="SemiBold" FontSize="14"
                                       HorizontalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="SeeAllMLVusers_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Subscribers -->
                    <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" CornerRadius="8" Margin="10"
                            Background="White" Padding="30">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="0" x:Name="TotalSubscribersText" FontSize="64" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Subscribers" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="See more" Foreground="#0078FF" FontWeight="SemiBold" FontSize="14"
                                       HorizontalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="SeeAllSubscribers_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Molave Street Legend -->
                    <Border Grid.Column="3" BorderBrush="Black" BorderThickness="1" CornerRadius="8" Margin="10"
                            Background="White" Padding="30">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="0" x:Name="txtLegend" FontSize="64" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Molave Street" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Legend" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="See more" Foreground="#0078FF" FontWeight="SemiBold" FontSize="14"
                                       HorizontalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="SeeAllLegends_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- 🔹 Customer Quick Message Table (kept from your code) -->
                <Border BorderBrush="Black" BorderThickness="1" Padding="20" CornerRadius="8" Margin="10,0,10,30">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <TextBlock Text="Customers Quick Message"
                                   FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <Button Content="Refresh"
                                    Background="Black" Foreground="White"
                                    FontWeight="Bold" Cursor="Hand" Height="38" Width="140"
                                    Click="Refresh_Click"
                                    HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- DataGrid -->
                        <Grid Background="White" Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid x:Name="CustomerGrid"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  FontSize="14"
                  BorderBrush="Transparent" 
                  BorderThickness="0"
                  GridLinesVisibility="All"
                  Background="White">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Black"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                                    <DataGridTextColumn Header="Phone Number" Binding="{Binding Phone}" Width="*"/>
                                    <DataGridTemplateColumn Header="Message" Width="2*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Message}" 
                           TextWrapping="Wrap"
                           TextTrimming="None"
                           VerticalAlignment="Center"
                           Padding="5"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Action" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Width="30" Height="30"
                                                    Cursor="Hand"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Click="ResolveMessage_Click">
                                                    <Image Source="/Icon/CheckCircle.png" Width="20" Height="20"/>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel x:Name="PaginationPanel" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Background="White" Margin="0,10,0,10"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>

        </ScrollViewer>

        <!-- Gray Overlay for Modal Effect - MOVED OUTSIDE ScrollViewer -->
        <Border x:Name="ModalOverlay"
            Background="#80000000"
            Visibility="Collapsed"
            IsHitTestVisible="True"
            MouseLeftButtonDown="ModalOverlay_Click"/>
    </Grid>
</Window>